{%- comment -%}
  Sallety Theme - Countdown Timer Section
  Premium urgency countdown with multiple layouts, decorative shapes, RTL support
{%- endcomment -%}

{%- liquid
  assign scheme_number = section.settings.color_scheme | default: 'scheme-1' | remove: 'scheme-'
  assign target_date = section.settings.target_date
  assign heading = section.settings.heading
  assign subheading = section.settings.subheading
  assign description = section.settings.description
  assign button_text = section.settings.button_text
  assign button_link = section.settings.button_link
  assign button_style = section.settings.button_style | default: 'primary'
  assign layout = section.settings.layout | default: 'centered'
  assign show_shapes = section.settings.show_shapes
  assign expired_message = section.settings.expired_message | default: 'انتهى العرض!'
  assign expired_heading = section.settings.expired_heading | default: 'انتهى الوقت'
  assign show_labels = section.settings.show_labels
  assign card_style = section.settings.card_style | default: 'glass'
  assign separator_style = section.settings.separator_style | default: 'colon'
  assign heading_weight = section.settings.heading_weight | default: '700'
  assign padding_top = section.settings.padding_top | default: 60
  assign padding_bottom = section.settings.padding_bottom | default: 60

  assign text_alignment = section.settings.text_alignment | default: 'center'

  assign digit_color = section.settings.digit_color | default: ''
  assign digit_bg = section.settings.digit_bg | default: ''
  assign label_color = section.settings.label_color | default: ''
  assign separator_color = section.settings.separator_color | default: ''
  assign heading_color = section.settings.heading_color | default: ''

  assign corner_radius = section.settings.corner_radius | default: 16
  assign digit_size_desktop = section.settings.digit_size_desktop | default: 48
  assign digit_size_mobile = section.settings.digit_size_mobile | default: 32

  assign rtl_langs = settings.rtl_languages | default: 'ar,he,fa,ur' | split: ','
  assign current_lang = request.locale.iso_code | slice: 0, 2 | downcase
  assign is_rtl_lang = false
  for lang in rtl_langs
    assign lang_trimmed = lang | strip | downcase
    if current_lang == lang_trimmed
      assign is_rtl_lang = true
      break
    endif
  endfor
  assign section_dir = 'ltr'
  if settings.enable_rtl and is_rtl_lang
    assign section_dir = 'rtl'
  endif
-%}

<section
  class="ct-section color-scheme-{{ scheme_number }} relative overflow-hidden animate-on-scroll aos-fade-up"
  id="CountdownTimer-{{ section.id }}"
  dir="{{ section_dir }}"
  style="
    --ct-padding-top: {{ padding_top }}px;
    --ct-padding-bottom: {{ padding_bottom }}px;
    --ct-corner-radius: {{ corner_radius }}px;
    --ct-digit-size-desktop: {{ digit_size_desktop }}px;
    --ct-digit-size-mobile: {{ digit_size_mobile }}px;
    --ct-heading-weight: {{ heading_weight }};
    {% if digit_color != blank %}--ct-digit-color: {{ digit_color }};{% endif %}
    {% if digit_bg != blank %}--ct-digit-bg: {{ digit_bg }};{% endif %}
    {% if label_color != blank %}--ct-label-color: {{ label_color }};{% endif %}
    {% if separator_color != blank %}--ct-separator-color: {{ separator_color }};{% endif %}
    {% if heading_color != blank %}--ct-heading-color: {{ heading_color }};{% endif %}
    font-family: var(--font-body-family);
  "
>
  {%- if show_shapes -%}
    <div class="ct-shapes" aria-hidden="true">
      <div class="ct-shape ct-shape-1"></div>
      <div class="ct-shape ct-shape-2"></div>
      <div class="ct-shape ct-shape-3"></div>
      <div class="ct-shape ct-shape-4"></div>
    </div>
  {%- endif -%}

  <div class="ct-container max-w-[1200px] mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    {%- if layout == 'split' and section.settings.image != blank -%}
      <div class="ct-split">
        <div class="ct-split__content" style="text-align: {{ text_alignment }};">
    {%- else -%}
      <div class="ct-centered" style="text-align: {{ text_alignment }};">
    {%- endif -%}

    {%- if subheading != blank -%}
      <span class="ct-subheading">{{ subheading }}</span>
    {%- endif -%}

    {%- if heading != blank -%}
      <h2 class="ct-heading" style="{% if heading_color != blank %}color: {{ heading_color }};{% endif %}">
        {{ heading }}
      </h2>
    {%- endif -%}

    {%- if description != blank -%}
      <div class="ct-description rte">{{ description }}</div>
    {%- endif -%}

    {%- comment -%} Countdown Display {%- endcomment -%}
    <countdown-timer
      class="ct-countdown ct-countdown--{{ card_style }}"
      data-target-date="{{ target_date }}"
      data-expired-message="{{ expired_message | escape }}"
      data-expired-heading="{{ expired_heading | escape }}"
      data-show-labels="{{ show_labels }}"
      data-separator="{{ separator_style }}"
      style="justify-content: {{ text_alignment }};"
    >
      <div class="ct-units">
        {%- comment -%} Days {%- endcomment -%}
        <div class="ct-unit">
          <div class="ct-digit-wrap">
            <span class="ct-digit" data-days>00</span>
          </div>
          {%- if show_labels -%}
            <span class="ct-label">{{ 'sections.countdown_timer.days' | t | default: 'يوم' }}</span>
          {%- endif -%}
        </div>

        <span class="ct-separator" aria-hidden="true">
          {%- case separator_style -%}
            {%- when 'colon' -%}
              :
            {%- when 'dot' -%}
              •
            {%- when 'dash' -%}
              -
            {%- when 'slash' -%}
              /
          {%- endcase -%}
        </span>

        {%- comment -%} Hours {%- endcomment -%}
        <div class="ct-unit">
          <div class="ct-digit-wrap">
            <span class="ct-digit" data-hours>00</span>
          </div>
          {%- if show_labels -%}
            <span class="ct-label">{{ 'sections.countdown_timer.hours' | t | default: 'ساعة' }}</span>
          {%- endif -%}
        </div>

        <span class="ct-separator" aria-hidden="true">
          {%- case separator_style -%}
            {%- when 'colon' -%}
              :
            {%- when 'dot' -%}
              •
            {%- when 'dash' -%}
              -
            {%- when 'slash' -%}
              /
          {%- endcase -%}
        </span>

        {%- comment -%} Minutes {%- endcomment -%}
        <div class="ct-unit">
          <div class="ct-digit-wrap">
            <span class="ct-digit" data-minutes>00</span>
          </div>
          {%- if show_labels -%}
            <span class="ct-label">{{ 'sections.countdown_timer.minutes' | t | default: 'دقيقة' }}</span>
          {%- endif -%}
        </div>

        <span class="ct-separator" aria-hidden="true">
          {%- case separator_style -%}
            {%- when 'colon' -%}
              :
            {%- when 'dot' -%}
              •
            {%- when 'dash' -%}
              -
            {%- when 'slash' -%}
              /
          {%- endcase -%}
        </span>

        {%- comment -%} Seconds {%- endcomment -%}
        <div class="ct-unit">
          <div class="ct-digit-wrap">
            <span class="ct-digit" data-seconds>00</span>
          </div>
          {%- if show_labels -%}
            <span class="ct-label">{{ 'sections.countdown_timer.seconds' | t | default: 'ثانية' }}</span>
          {%- endif -%}
        </div>
      </div>

      {%- comment -%} Expired Message (hidden by default) {%- endcomment -%}
      <div class="ct-expired" style="display: none;">
        <svg
          class="ct-expired__icon"
          width="48"
          height="48"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="1.5"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/>
        </svg>
        <p class="ct-expired__text"></p>
      </div>
    </countdown-timer>

    {%- if button_text != blank -%}
      <div class="ct-button-wrap" style="justify-content: {{ text_alignment }};">
        <a href="{{ button_link }}" class="btn btn--{{ button_style }} ct-btn">
          {{ button_text }}
        </a>
      </div>
    {%- endif -%}

    {%- if layout == 'split' and section.settings.image != blank -%}
      </div>
      <div class="ct-split__image">
        {{
          section.settings.image
          | image_url: width: 800
          | image_tag:
            loading: 'lazy',
            class: 'ct-image',
            widths: '400,600,800',
            sizes: '(max-width: 768px) 100vw, 50vw'
        }}
      </div>
      </div>
    {%- else -%}
      </div>
    {%- endif -%}
  </div>
</section>

<style>
  /* ===== Section Base ===== */
  .ct-section {
    padding-top: var(--ct-padding-top);
    padding-bottom: var(--ct-padding-bottom);
  }

  .ct-subheading {
    display: inline-block;
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--color-accent, var(--color-primary));
    margin-bottom: 12px;
  }

  .ct-heading {
    font-size: clamp(1.75rem, 4vw, 2.75rem);
    font-weight: var(--ct-heading-weight);
    color: var(--ct-heading-color, var(--color-text));
    line-height: 1.2;
    margin: 0 0 12px;
    font-family: var(--font-heading-family, var(--font-body-family));
  }

  .ct-description {
    font-size: 1rem;
    color: var(--color-secondary-text);
    line-height: 1.7;
    margin-bottom: 32px;
    max-width: 600px;
  }

  .ct-centered .ct-description {
    margin-inline: auto;
  }

  /* ===== Split Layout ===== */
  .ct-split {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 48px;
    align-items: center;
  }

  .ct-split__image {
    border-radius: var(--ct-corner-radius);
    overflow: hidden;
  }

  .ct-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: var(--ct-corner-radius);
  }

  @media (max-width: 768px) {
    .ct-split {
      grid-template-columns: 1fr;
      gap: 32px;
    }
    .ct-split__image {
      order: -1;
    }
  }

  /* ===== Countdown Units ===== */
  .ct-countdown {
    margin-bottom: 32px;
  }

  .ct-units {
    display: flex;
    align-items: flex-start;
    gap: 12px;
    flex-wrap: wrap;
  }

  .ct-unit {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8px;
  }

  .ct-digit-wrap {
    position: relative;
    overflow: hidden;
    border-radius: calc(var(--ct-corner-radius) * 0.5);
    min-width: 80px;
    padding: 16px 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .ct-digit-wrap:hover {
    transform: translateY(-4px);
  }

  .ct-digit {
    font-size: var(--ct-digit-size-desktop);
    font-weight: 800;
    font-variant-numeric: tabular-nums;
    line-height: 1;
    color: var(--ct-digit-color, var(--color-text));
    transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .ct-label {
    font-size: 0.8rem;
    font-weight: 500;
    color: var(--ct-label-color, var(--color-secondary-text));
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .ct-separator {
    font-size: calc(var(--ct-digit-size-desktop) * 0.6);
    font-weight: 700;
    color: var(--ct-separator-color, var(--color-accent, var(--color-primary)));
    line-height: 1;
    padding-top: 16px;
    animation: ct-blink 1.5s ease-in-out infinite;
  }

  /* ===== Card Styles ===== */
  .ct-countdown--glass .ct-digit-wrap {
    background: rgba(255, 255, 255, 0.08);
    backdrop-filter: blur(12px);
    border: 1px solid rgba(255, 255, 255, 0.12);
    box-shadow: 0 4px 24px rgba(0, 0, 0, 0.1);
  }

  .ct-countdown--glass .ct-digit-wrap:hover {
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.15);
    border-color: rgba(255, 255, 255, 0.2);
  }

  .ct-countdown--solid .ct-digit-wrap {
    background: var(--ct-digit-bg, var(--color-card-background, rgba(0, 0, 0, 0.05)));
    border: none;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
  }

  .ct-countdown--solid .ct-digit-wrap:hover {
    box-shadow: 0 6px 24px rgba(0, 0, 0, 0.12);
  }

  .ct-countdown--bordered .ct-digit-wrap {
    background: transparent;
    border: 2px solid var(--ct-digit-bg, var(--color-border));
  }

  .ct-countdown--bordered .ct-digit-wrap:hover {
    border-color: var(--color-accent, var(--color-primary));
  }

  .ct-countdown--minimal .ct-digit-wrap {
    background: transparent;
    border: none;
    padding: 8px 12px;
    min-width: auto;
  }

  /* ===== Expired State ===== */
  .ct-expired {
    text-align: center;
    padding: 32px;
  }

  .ct-expired__icon {
    color: var(--color-secondary-text);
    margin: 0 auto 16px;
    opacity: 0.5;
  }

  .ct-expired__text {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-text);
    margin: 0;
  }

  /* ===== Button ===== */
  .ct-button-wrap {
    display: flex;
  }

  .ct-btn {
    padding: 14px 32px;
    font-size: 1rem;
    font-weight: 600;
    border-radius: var(--ct-corner-radius);
    transition: all 0.3s ease;
  }

  /* ===== Animations ===== */
  @keyframes ct-blink {
    0%,
    100% {
      opacity: 1;
    }
    50% {
      opacity: 0.3;
    }
  }

  .ct-digit.ct-flip {
    animation: ct-digit-flip 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  }

  @keyframes ct-digit-flip {
    0% {
      transform: translateY(-20px);
      opacity: 0;
    }
    50% {
      transform: translateY(4px);
      opacity: 1;
    }
    100% {
      transform: translateY(0);
    }
  }

  /* ===== Decorative Shapes ===== */
  .ct-shapes {
    position: absolute;
    inset: 0;
    pointer-events: none;
    z-index: 1;
    overflow: hidden;
  }

  .ct-shape {
    position: absolute;
    opacity: 0.08;
  }

  .ct-shape-1 {
    width: 200px;
    height: 200px;
    top: -60px;
    right: -40px;
    background: var(--color-text);
    border-radius: 50%;
    animation: ct-float 15s ease-in-out infinite;
  }

  .ct-shape-2 {
    width: 80px;
    height: 80px;
    bottom: 20px;
    left: 5%;
    background: var(--color-text);
    clip-path: polygon(50% 0%, 100% 25%, 100% 75%, 50% 100%, 0% 75%, 0% 25%);
    animation: ct-rotate 20s linear infinite;
  }

  .ct-shape-3 {
    width: 60px;
    height: 60px;
    top: 30%;
    left: 8%;
    border: 6px solid var(--color-text);
    border-radius: 50%;
    background: transparent;
    animation: ct-pulse 8s ease-in-out infinite;
  }

  .ct-shape-4 {
    width: 40px;
    height: 40px;
    bottom: 30%;
    right: 10%;
    background: var(--color-text);
    transform: rotate(45deg);
    animation: ct-drift 12s ease-in-out infinite;
  }

  @keyframes ct-float {
    0%,
    100% {
      transform: translate(0, 0) scale(1);
    }
    50% {
      transform: translate(-20px, 25px) scale(1.05);
    }
  }

  @keyframes ct-rotate {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  @keyframes ct-pulse {
    0%,
    100% {
      transform: scale(1);
      opacity: 0.08;
    }
    50% {
      transform: scale(1.2);
      opacity: 0.12;
    }
  }

  @keyframes ct-drift {
    0%,
    100% {
      transform: rotate(45deg) translate(0, 0);
    }
    50% {
      transform: rotate(45deg) translate(10px, -15px);
    }
  }

  /* ===== Responsive ===== */
  @media (max-width: 768px) {
    .ct-units {
      gap: 8px;
    }
    .ct-digit-wrap {
      min-width: 60px;
      padding: 12px 14px;
    }
    .ct-digit {
      font-size: var(--ct-digit-size-mobile);
    }
    .ct-separator {
      font-size: calc(var(--ct-digit-size-mobile) * 0.6);
      padding-top: 12px;
    }
    .ct-shape-1 {
      width: 120px;
      height: 120px;
    }
    .ct-shape-2 {
      width: 50px;
      height: 50px;
    }
    .ct-shape-3 {
      display: none;
    }
    .ct-shape-4 {
      display: none;
    }
  }

  @media (max-width: 480px) {
    .ct-digit-wrap {
      min-width: 50px;
      padding: 10px 8px;
    }
    .ct-units {
      gap: 6px;
    }
    .ct-shape-1 {
      display: none;
    }
    .ct-shape-2 {
      display: none;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .ct-shape,
    .ct-separator,
    .ct-digit-wrap,
    .ct-digit {
      animation: none !important;
      transition: none !important;
    }
  }
</style>

<script>
  if (!customElements.get('countdown-timer')) {
    class CountdownTimer extends HTMLElement {
      constructor() {
        super();
        this.daysEl = this.querySelector('[data-days]');
        this.hoursEl = this.querySelector('[data-hours]');
        this.minutesEl = this.querySelector('[data-minutes]');
        this.secondsEl = this.querySelector('[data-seconds]');
        this.unitsEl = this.querySelector('.ct-units');
        this.expiredEl = this.querySelector('.ct-expired');
        this.expiredText = this.querySelector('.ct-expired__text');

        this.targetDate = new Date(this.dataset.targetDate).getTime();
        this.expiredMessage = this.dataset.expiredMessage || 'انتهى العرض!';
        this.expiredHeading = this.dataset.expiredHeading || 'انتهى الوقت';
        this.interval = null;
      }

      connectedCallback() {
        if (isNaN(this.targetDate)) {
          this.showExpired();
          return;
        }
        this.update();
        this.interval = setInterval(() => this.update(), 1000);
      }

      disconnectedCallback() {
        if (this.interval) clearInterval(this.interval);
      }

      update() {
        const now = Date.now();
        const diff = this.targetDate - now;

        if (diff <= 0) {
          this.showExpired();
          return;
        }

        const days = Math.floor(diff / (1000 * 60 * 60 * 24));
        const hours = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
        const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
        const seconds = Math.floor((diff % (1000 * 60)) / 1000);

        this.setDigit(this.daysEl, days);
        this.setDigit(this.hoursEl, hours);
        this.setDigit(this.minutesEl, minutes);
        this.setDigit(this.secondsEl, seconds);
      }

      setDigit(el, value) {
        if (!el) return;
        const str = String(value).padStart(2, '0');
        if (el.textContent !== str) {
          el.textContent = str;
          el.classList.remove('ct-flip');
          void el.offsetWidth; /* force reflow */
          el.classList.add('ct-flip');
        }
      }

      showExpired() {
        if (this.interval) clearInterval(this.interval);
        if (this.unitsEl) this.unitsEl.style.display = 'none';
        if (this.expiredEl) {
          this.expiredEl.style.display = 'block';
          if (this.expiredText) this.expiredText.textContent = this.expiredMessage;
        }
      }
    }
    customElements.define('countdown-timer', CountdownTimer);
  }
</script>

