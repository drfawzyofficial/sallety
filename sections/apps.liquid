{%- comment -%}
  Sallety Theme - Apps Section
  This section is used to display Shopify apps.
{%- endcomment -%}

{% comment %}theme-check-disable RemoteAsset{% endcomment %}
<section class="apps section" data-section-id="{{ section.id }}" data-section-type="apps">
  <div class="container">
    {%- for block in section.blocks -%}
      {% render block %}
    {%- endfor -%}
  </div>
</section>

{% schema %}
{
  "name": "t:sections.apps.name",
  "class": "section-apps",
  "blocks": [
    {
      "type": "@app"
    }
  ],
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "t:sections.all.padding.padding_top",
      "default": 60,
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 60,
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px"
    }
  ],
  "presets": [
    {
      "name": "t:sections.apps.name"
    }
  ]
}
{% endschema %}

