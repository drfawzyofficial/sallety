              <div class="sa-article__form-errors">{{ form.errors | default_errors }}</div>
            {%- endif -%}

            {%- if form.posted_successfully? -%}
              <div class="sa-article__form-success">
                {%- if blog.moderated? -%}
                  {{ 'blogs.comments.success_moderated' | t }}
                {%- else -%}
