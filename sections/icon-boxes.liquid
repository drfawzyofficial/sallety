                  </svg>
              {%- endcase -%}
            </div>
          {%- endif -%}

          <div class="ib-card__content">
            {%- if block.settings.title != blank -%}
              <h3 class="ib-card__title">{{ block.settings.title }}</h3>
            {%- endif -%}
            {%- if block.settings.description != blank -%}
              <p class="ib-card__desc">{{ block.settings.description }}</p>
            {%- endif -%}
            {%- if block.settings.link != blank and block.settings.link_text != blank -%}
              <a href="{{ block.settings.link }}" class="ib-card__link">
                {{ block.settings.link_text }}
                <svg
                  width="14"
                  height="14"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                >
                  <line x1="5" y1="12" x2="19" y2="12"/><polyline points="12 5 19 12 12 19"/>
                </svg>
              </a>
            {%- endif -%}
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

<style>
  .ib-section {
    padding-block-start: var(--ib-pt);
    padding-block-end: var(--ib-pb);
    position: relative;
    overflow: hidden;
  }
  .ib-container {
    max-width: 1400px;
    margin-inline: auto;
    padding-inline: 1rem;
    position: relative;
    z-index: 2;
  }
  @media (min-width: 768px) {
    .ib-container {
      padding-inline: 1.5rem;
    }
  }
  @media (min-width: 1024px) {
    .ib-container {
      padding-inline: 4rem;
    }
  }

  .ib-header {
    margin-block-end: 2.5rem;
    display: flex;
    flex-direction: column;
    gap: 0.625rem;
  }
  .ib-align--center {
    text-align: center;
    align-items: center;
  }
  .ib-align--start {
    text-align: start;
    align-items: flex-start;
  }
  .ib-align--end {
    text-align: end;
    align-items: flex-end;
  }

  .ib-section-heading {
    font-weight: var(--ib-heading-weight);
    color: var(--color-text);
    margin: 0;
    line-height: 1.3;
  }
  .ib-section-sub {
    font-size: var(--font-body-size, 16px);
    color: var(--color-secondary-text);
    margin: 0;
    max-width: 600px;
    line-height: 1.6;
    opacity: 0.8;
  }

  .ib-grid {
    display: grid;
    grid-template-columns: repeat(var(--ib-cols-d), 1fr);
    gap: var(--ib-gap);
  }
  @media (max-width: 1023px) {
    .ib-grid {
      grid-template-columns: repeat(var(--ib-cols-t), 1fr);
    }
  }
  @media (max-width: 639px) {
    .ib-grid {
      grid-template-columns: repeat(var(--ib-cols-m), 1fr);
    }
  }

  .ib-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding: 2rem 1.5rem;
    border-radius: var(--ib-radius);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  .ib-card:hover {
    transform: translateY(-4px);
  }

  .ib-card--minimal {
    background: transparent;
  }
  .ib-card--minimal:hover {
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.08);
  }
  .ib-card--bordered {
    border: 1px solid var(--color-border, rgba(0, 0, 0, 0.08));
    background: transparent;
  }
  .ib-card--bordered:hover {
    border-color: var(--ib-icon-color);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.06);
  }
  .ib-card--filled {
    background: var(--color-card-background, rgba(255, 255, 255, 0.03));
    border: 1px solid rgba(255, 255, 255, 0.06);
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.04);
  }
  .ib-card--filled:hover {
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
  }

  .ib-card__icon {
    width: var(--ib-icon-size);
    height: var(--ib-icon-size);
    color: var(--ib-icon-color);
    margin-block-end: 1.25rem;
    flex-shrink: 0;
  }
  .ib-card__icon svg {
    width: 100%;
    height: 100%;
  }

  .ib-card__content {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    align-items: center;
  }
  .ib-card__title {
    font-size: 1.125rem;
    font-weight: 700;
    color: var(--color-text);
    margin: 0;
    line-height: 1.4;
  }
  .ib-card__desc {
    font-size: 0.9375rem;
    color: var(--color-secondary-text);
    margin: 0;
    line-height: 1.65;
    opacity: 0.85;
  }
  .ib-card__link {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--ib-icon-color);
    text-decoration: none;
    margin-block-start: 0.5rem;
    transition: gap 0.3s ease;
  }
  .ib-card__link:hover {
    gap: 0.75rem;
  }
  [dir='rtl'] .ib-card__link svg {
    transform: scaleX(-1);
  }

  /* Shapes */
  .ib-shapes {
    position: absolute;
    inset: 0;
    pointer-events: none;
    z-index: 1;
    overflow: hidden;
  }
  .ib-shape {
    position: absolute;
    opacity: 0.06;
  }
  .ib-shape-1 {
    width: 250px;
    height: 250px;
    top: -80px;
    inset-inline-end: -60px;
    background: var(--color-primary, #1a2744);
    border-radius: 50%;
    animation: ib-float 18s ease-in-out infinite;
  }
  .ib-shape-2 {
    width: 70px;
    height: 70px;
    bottom: 10%;
    inset-inline-start: 5%;
    background: var(--color-primary, #1a2744);
    border-radius: 50%;
    animation: ib-float 14s ease-in-out infinite reverse;
  }
  @keyframes ib-float {
    0%,
    100% {
      transform: translate(0, 0);
    }
    50% {
      transform: translate(-15px, 20px);
    }
  }
  @media (max-width: 767px) {
    .ib-shape-1 {
      width: 140px;
      height: 140px;
    }
    .ib-shape-2 {
      display: none;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .ib-card {
      transition: none !important;
    }
    .ib-shape {
      animation: none;
    }
  }
</style>

