{%- comment -%}
  Sallety Theme — Icon Boxes Section
  Feature/service boxes with built-in SVG icons, RTL/LTR support.
{%- endcomment -%}

{%- liquid
  assign scheme_number = section.settings.color_scheme.id | remove: 'scheme-'
  assign heading_weight = section.settings.heading_weight | default: '700'
  assign show_heading = section.settings.show_heading
  assign section_heading = section.settings.heading | default: 'لماذا تختارنا'
  assign section_subheading = section.settings.subheading
  assign text_alignment = section.settings.text_alignment | default: 'center'
  assign columns_desktop = section.settings.columns_desktop | default: 4
  assign columns_tablet = section.settings.columns_tablet | default: 2
  assign columns_mobile = section.settings.columns_mobile | default: 1
  assign card_style = section.settings.card_style | default: 'bordered'
  assign icon_size = section.settings.icon_size | default: 48
  assign icon_color = section.settings.icon_color
  assign corner_radius = section.settings.corner_radius | default: 12
  assign gap = section.settings.gap | default: 24
  assign show_shapes = section.settings.show_shapes
  assign padding_top = section.settings.padding_top | default: 60
  assign padding_bottom = section.settings.padding_bottom | default: 60
-%}

{%- capture section_dir -%}{%- render 'section-dir' -%}{%- endcapture -%}

<section
  id="icon-boxes-{{ section.id }}"
  class="ib-section color-scheme-{{ scheme_number }} relative overflow-hidden"
  dir="{{ section_dir }}"
  data-section-id="{{ section.id }}"
  style="
    --ib-pt: {{ padding_top }}px;
    --ib-pb: {{ padding_bottom }}px;
    --ib-cols-d: {{ columns_desktop }};
    --ib-cols-t: {{ columns_tablet }};
    --ib-cols-m: {{ columns_mobile }};
    --ib-gap: {{ gap }}px;
    --ib-radius: {{ corner_radius }}px;
    --ib-icon-size: {{ icon_size }}px;
    --ib-icon-color: {{ icon_color | default: 'var(--color-primary, #1a2744)' }};
    --ib-heading-weight: {{ heading_weight }};
    font-family: var(--font-body-family);
  "
>
  {%- if show_shapes -%}
    <div class="ib-shapes" aria-hidden="true">
      <div class="ib-shape ib-shape-1"></div>
      <div class="ib-shape ib-shape-2"></div>
    </div>
  {%- endif -%}

  <div class="ib-container">
    {%- if show_heading -%}
      <header class="ib-header ib-align--{{ text_alignment }}">
        <h2 class="ib-section-heading">{{ section_heading }}</h2>
        {%- if section_subheading != blank -%}
          <p class="ib-section-sub">{{ section_subheading }}</p>
        {%- endif -%}
      </header>
    {%- endif -%}

    <div class="ib-grid">
      {%- for block in section.blocks -%}
        <div class="ib-card ib-card--{{ card_style }}" {{ block.shopify_attributes }}>
          {%- if block.settings.icon != 'none' -%}
            <div class="ib-card__icon">
              {%- case block.settings.icon -%}
