<script>
  /**
   * Address Management - Customer addresses functionality
   * @fileoverview Handles address form interactions, deletion with modal, and custom checkboxes
   * @version 3.0.0
   */
  (function () {
    'use strict';

    /** @constant {string} New address form ID */
    const NEW_FORM_ID = 'newAddressForm';
    /** @constant {string} Edit form prefix */
    const EDIT_FORM_PREFIX = 'editForm_';

    /** Modal & pending delete state */
    const modal = {
      el: null,
      confirmBtn: null,
      cancelBtn: null,
      pendingUrl: null,
    };

    /**
     * Toggle the new address form visibility
     * @param {string} type - The form type identifier
     * @returns {void}
     */
    window.toggleAddressForm = function (type) {
      const form = document.getElementById(NEW_FORM_ID);
      if (!form) {
        console.warn('[Addresses] New address form not found');
        return;
      }

      const isHidden = form.style.display === 'none' || !form.style.display;

      if (isHidden) {
        form.style.display = 'block';
        const scrollBehavior = prefersReducedMotion() ? 'auto' : 'smooth';
        form.scrollIntoView({ behavior: scrollBehavior, block: 'start' });
        const firstInput = form.querySelector('input:not([type="hidden"])');
        firstInput?.focus();
      } else {
        form.style.display = 'none';
      }
    };

    /**
     * Toggle an edit form visibility
     * @param {string} id - The address ID
     * @returns {void}
     */
    window.toggleEditForm = function (id) {
      if (!id) {
        console.warn('[Addresses] No address ID provided');
        return;
      }

      const form = document.getElementById(EDIT_FORM_PREFIX + id);
      if (!form) {
        console.warn(`[Addresses] Edit form not found for ID: ${id}`);
        return;
      }

      const isHidden = form.style.display === 'none' || !form.style.display;
      form.style.display = isHidden ? 'block' : 'none';

      if (isHidden) {
        const firstInput = form.querySelector('input:not([type="hidden"])');
        firstInput?.focus();
      }
    };

    /**
     * Show the delete confirmation modal
     * @param {string} url - The delete action URL
     * @param {string} id - The address ID
     * @returns {void}
     */
    window.deleteAddress = function (url, id) {
      if (!url) {
        console.error('[Addresses] No URL provided for deletion');
        return;
      }

      modal.pendingUrl = url;
      openDeleteModal();
    };

    /**
     * Open the delete modal
     */
    function openDeleteModal() {
      if (!modal.el) return;
      modal.el.classList.add('is-open');
      modal.el.setAttribute('aria-hidden', 'false');
      document.body.style.overflow = 'hidden';
      modal.cancelBtn?.focus();
    }

    /**
     * Close the delete modal
     */
    function closeDeleteModal() {
      if (!modal.el) return;
      modal.el.classList.remove('is-open');
      modal.el.setAttribute('aria-hidden', 'true');
      document.body.style.overflow = '';
      modal.pendingUrl = null;
    }

    /**
     * Confirm deletion â€“ submits the form
     */
    function confirmDeletion() {
      if (!modal.pendingUrl) return;

      const form = document.createElement('form');
      form.method = 'post';
      form.action = modal.pendingUrl;
      form.style.display = 'none';

      const methodInput = document.createElement('input');
      methodInput.type = 'hidden';
      methodInput.name = '_method';
      methodInput.value = 'delete';
      form.appendChild(methodInput);

      document.body.appendChild(form);
      form.submit();
    }

    /**
     * Check if user prefers reduced motion
     * @returns {boolean}
     */
    function prefersReducedMotion() {
      return window.matchMedia('(prefers-reduced-motion: reduce)').matches;
    }

    /**
     * Initialize country/province selectors
     */
    function initCountryProvinceSelectors() {
      if (typeof Shopify === 'undefined' || !Shopify.CountryProvinceSelector) {
        return;
      }

      try {
        new Shopify.CountryProvinceSelector('AddressCountry', 'AddressProvince', {
          hideElement: 'AddressProvinceContainer',
        });
      } catch (error) {
        console.warn('[Addresses] Country selector initialization failed:', error.message);
      }
    }

    /**
     * Initialize modal references and event listeners
     */
    function initDeleteModal() {
      modal.el = document.getElementById('deleteAddressModal');
      if (!modal.el) return;

      modal.confirmBtn = document.getElementById('deleteModalConfirm');
      modal.cancelBtn = document.getElementById('deleteModalCancel');

      // Cancel button
      modal.cancelBtn?.addEventListener('click', closeDeleteModal);

      // Confirm button
      modal.confirmBtn?.addEventListener('click', confirmDeletion);

      // Click on overlay background
      modal.el.addEventListener('click', function (e) {
        if (e.target === modal.el) {
          closeDeleteModal();
        }
      });

      // Escape key
      document.addEventListener('keydown', function (e) {
        if (e.key === 'Escape' && modal.el.classList.contains('is-open')) {
          closeDeleteModal();
        }
      });
    }

    /**
     * Boot everything on DOM ready
     */
    function init() {
      initCountryProvinceSelectors();
      initDeleteModal();
    }

    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', init);
    } else {
      init();
    }
  })();
</script>

