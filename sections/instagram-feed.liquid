<style>
  /* ================================
     INSTAGRAM FEED - BASE
     ================================ */
  .ig-feed-section {
    padding-block-start: var(--ig-pt);
    padding-block-end: var(--ig-pb);
    position: relative;
    overflow: hidden;
  }

  .ig-container {
    max-width: 1400px;
    margin: 0 auto;
    padding-inline: 1rem;
    position: relative;
    z-index: 2;
  }

  @media (min-width: 768px) {
    .ig-container {
      padding-inline: 1.5rem;
    }
  }

  @media (min-width: 1024px) {
    .ig-container {
      padding-inline: 4rem;
    }
  }

  /* ================================
     HEADER
     ================================ */
  .ig-header {
    margin-block-end: 2.5rem;
    display: flex;
    flex-direction: column;
    gap: 0.625rem;
  }

  .ig-align--center {
    text-align: center;
    align-items: center;
  }

  .ig-align--start {
    text-align: start;
    align-items: flex-start;
  }

  .ig-align--end {
    text-align: end;
    align-items: flex-end;
  }

  .ig-header__icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 64px;
    height: 64px;
    border-radius: 50%;
    background: linear-gradient(135deg, #f09433 0%, #e6683c 25%, #dc2743 50%, #cc2366 75%, #bc1888 100%);
    color: #fff;
    margin-block-end: 0.5rem;
    animation: ig-icon-glow 3s ease-in-out infinite alternate;
    box-shadow: 0 4px 20px rgba(225, 48, 108, 0.3);
  }

  @keyframes ig-icon-glow {
    0% {
      box-shadow: 0 4px 20px rgba(225, 48, 108, 0.3);
    }
    100% {
      box-shadow: 0 8px 35px rgba(225, 48, 108, 0.5);
    }
  }

  .ig-heading {
    font-weight: var(--ig-heading-weight);
    color: var(--color-text);
    margin: 0;
    line-height: 1.3;
  }

  .ig-subheading {
    font-size: var(--font-body-size, 16px);
    color: var(--color-secondary-text, rgba(var(--color-text-rgb), 0.7));
    margin: 0;
    max-width: 600px;
    line-height: 1.6;
    opacity: 0.8;
  }

  .ig-align--center .ig-subheading {
    margin-inline: auto;
  }

  .ig-username {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    font-size: 0.9375rem;
    font-weight: 600;
    color: var(--color-primary, #e1306c);
    text-decoration: none;
    padding: 0.375rem 0.875rem;
    border-radius: 2rem;
    background: rgba(225, 48, 108, 0.08);
    transition: all 0.3s ease;
    margin-block-start: 0.25rem;
  }

  .ig-username:hover {
    background: rgba(225, 48, 108, 0.15);
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(225, 48, 108, 0.15);
  }

  .ig-username svg {
    color: #e1306c;
    flex-shrink: 0;
  }

  @media (max-width: 767px) {
    .ig-header {
      margin-block-end: 2rem;
    }

    .ig-header__icon {
      width: 52px;
      height: 52px;
    }

    .ig-header__icon svg {
      width: 28px;
      height: 28px;
    }
  }

  /* ================================
     GRID LAYOUT
     ================================ */
  .ig-grid {
    display: grid;
    grid-template-columns: repeat(var(--ig-cols-desktop), 1fr);
    gap: var(--ig-gap);
  }

  @media (max-width: 1023px) {
    .ig-grid {
      grid-template-columns: repeat(var(--ig-cols-tablet), 1fr);
    }
  }

  @media (max-width: 639px) {
    .ig-grid {
      grid-template-columns: repeat(var(--ig-cols-mobile), 1fr);
    }
  }

  /* Grid Item Animation */
  .ig-grid__item {
    opacity: 0;
    transform: translateY(20px) scale(0.97);
    animation: ig-item-in 0.5s ease forwards;
  }

  .ig-grid__item:nth-child(1) {
    animation-delay: 0.05s;
  }
  .ig-grid__item:nth-child(2) {
    animation-delay: 0.1s;
  }
  .ig-grid__item:nth-child(3) {
    animation-delay: 0.15s;
  }
  .ig-grid__item:nth-child(4) {
    animation-delay: 0.2s;
  }
  .ig-grid__item:nth-child(5) {
    animation-delay: 0.25s;
  }
  .ig-grid__item:nth-child(6) {
    animation-delay: 0.3s;
  }
  .ig-grid__item:nth-child(7) {
    animation-delay: 0.35s;
  }
  .ig-grid__item:nth-child(8) {
    animation-delay: 0.4s;
  }
  .ig-grid__item:nth-child(9) {
    animation-delay: 0.45s;
  }
  .ig-grid__item:nth-child(10) {
    animation-delay: 0.5s;
  }
  .ig-grid__item:nth-child(11) {
    animation-delay: 0.55s;
  }
  .ig-grid__item:nth-child(12) {
    animation-delay: 0.6s;
  }

  @keyframes ig-item-in {
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  /* ================================
     INSTAGRAM ITEM CARD
     ================================ */
  .ig-item {
    position: relative;
    overflow: hidden;
    border-radius: var(--ig-corner);
    cursor: pointer;
    display: block;
    text-decoration: none;
  }

  .ig-item__image-wrap {
    position: relative;
    overflow: hidden;
    width: 100%;
  }

  /* Image Ratios */
  .ig-item__image-wrap--square {
    aspect-ratio: 1 / 1;
  }

  .ig-item__image-wrap--portrait {
    aspect-ratio: 4 / 5;
  }

  .ig-item__image-wrap--landscape {
    aspect-ratio: 16 / 9;
  }

  .ig-item__image-wrap--auto {
    aspect-ratio: auto;
  }

  .ig-item__img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1), filter 0.4s ease;
  }

  .ig-item__placeholder {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #f5f5f5 0%, #e8e8e8 50%, #f0f0f0 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    aspect-ratio: 1 / 1;
  }

  .ig-item__placeholder svg {
    width: 40px;
    height: 40px;
    opacity: 0.3;
    color: var(--color-secondary-text);
  }

  /* Overlay */
  .ig-item__overlay {
    position: absolute;
    inset: 0;
    background: var(--ig-overlay);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    opacity: 0;
    transition: opacity 0.4s ease;
    z-index: 2;
    padding: 1rem;
  }

  .ig-item:hover .ig-item__overlay,
  .ig-item:focus-within .ig-item__overlay {
    opacity: 1;
  }

  .ig-item__overlay-icon {
    width: 36px;
    height: 36px;
    color: #fff;
    filter: drop-shadow(0 2px 8px rgba(0, 0, 0, 0.3));
    transform: scale(0.5);
    transition: transform 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
  }

  .ig-item:hover .ig-item__overlay-icon,
  .ig-item:focus-within .ig-item__overlay-icon {
    transform: scale(1);
  }

  /* Likes & Caption on overlay */
  .ig-item__likes {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    color: #fff;
    font-size: 0.875rem;
    font-weight: 600;
    filter: drop-shadow(0 1px 4px rgba(0, 0, 0, 0.3));
    transform: translateY(10px);
    transition: transform 0.4s ease 0.05s, opacity 0.4s ease 0.05s;
    opacity: 0;
  }

  .ig-item:hover .ig-item__likes,
  .ig-item:focus-within .ig-item__likes {
    transform: translateY(0);
    opacity: 1;
  }

  .ig-item__likes svg {
    width: 18px;
    height: 18px;
    fill: #ff3040;
    stroke: none;
  }

  .ig-item__caption {
    color: #fff;
    font-size: 0.75rem;
    text-align: center;
    max-width: 90%;
    line-height: 1.4;
    opacity: 0;
    transform: translateY(10px);
    transition: transform 0.4s ease 0.1s, opacity 0.4s ease 0.1s;
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
  }

  .ig-item:hover .ig-item__caption,
  .ig-item:focus-within .ig-item__caption {
    opacity: 0.9;
    transform: translateY(0);
  }

  /* Hover Effects */
  /* zoom_overlay */
  .ig-item--zoom_overlay:hover .ig-item__img,
  .ig-item--zoom_overlay:focus-within .ig-item__img {
    transform: scale(1.08);
  }

  /* zoom_only */
  .ig-item--zoom_only:hover .ig-item__img,
  .ig-item--zoom_only:focus-within .ig-item__img {
    transform: scale(1.12);
  }

  .ig-item--zoom_only .ig-item__overlay {
    display: none;
  }

  /* blur */
  .ig-item--blur:hover .ig-item__img,
  .ig-item--blur:focus-within .ig-item__img {
    filter: blur(3px);
    transform: scale(1.05);
  }

  /* grayscale */
  .ig-item--grayscale .ig-item__img {
    filter: grayscale(100%);
    transition: filter 0.5s ease, transform 0.6s ease;
  }

  .ig-item--grayscale:hover .ig-item__img,
  .ig-item--grayscale:focus-within .ig-item__img {
    filter: grayscale(0%);
    transform: scale(1.05);
  }

  /* shine */
  .ig-item--shine::after {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 60%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.25), transparent);
    transform: skewX(-20deg);
    transition: left 0.6s ease;
    z-index: 3;
    pointer-events: none;
  }

  .ig-item--shine:hover::after {
    left: 150%;
  }

  .ig-item--shine:hover .ig-item__img {
    transform: scale(1.05);
  }

  /* Card border glow */
  .ig-item::before {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: var(--ig-corner);
    border: 1px solid rgba(255, 255, 255, 0.1);
    z-index: 3;
    pointer-events: none;
    transition: border-color 0.3s ease;
  }

  .ig-item:hover::before {
    border-color: rgba(225, 48, 108, 0.3);
  }

  /* ================================
     CAROUSEL LAYOUT
     ================================ */
  .ig-carousel {
    position: relative;
    padding-inline: 48px;
  }

  .ig-carousel__viewport {
    overflow: hidden;
  }

  .ig-carousel__track {
    display: flex;
    transition: transform 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .ig-carousel__slide {
    flex: 0 0 calc(100% / var(--ig-cols-desktop));
    max-width: calc(100% / var(--ig-cols-desktop));
    padding: 0 calc(var(--ig-gap) / 2);
    box-sizing: border-box;
  }

  @media (max-width: 1023px) {
    .ig-carousel__slide {
      flex: 0 0 calc(100% / var(--ig-cols-tablet));
      max-width: calc(100% / var(--ig-cols-tablet));
    }
  }

  @media (max-width: 639px) {
    .ig-carousel__slide {
      flex: 0 0 calc(100% / var(--ig-cols-mobile));
      max-width: calc(100% / var(--ig-cols-mobile));
    }
  }

  /* Carousel Navigation */
  .ig-carousel__btn {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 44px;
    height: 44px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    color: var(--color-text);
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    z-index: 10;
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
  }

  .ig-carousel__btn:hover:not(:disabled) {
    background: rgba(225, 48, 108, 0.15);
    border-color: rgba(225, 48, 108, 0.4);
    transform: translateY(-50%) scale(1.1);
    box-shadow: 0 4px 16px rgba(225, 48, 108, 0.2);
  }

  .ig-carousel__btn:disabled {
    opacity: 0.3;
    cursor: not-allowed;
  }

  .ig-carousel__btn svg {
    width: 20px;
    height: 20px;
  }

  .ig-carousel__btn--prev {
    inset-inline-start: 0;
  }

  .ig-carousel__btn--next {
    inset-inline-end: 0;
  }

  /* Flip arrows for LTR */
  html[dir='ltr'] .ig-carousel__btn svg,
  html:not([dir='rtl']) .ig-carousel__btn svg {
    transform: scaleX(-1);
  }

  /* Carousel Dots */
  .ig-carousel__dots {
    display: flex;
    justify-content: center;
    gap: 8px;
    margin-block-start: 1.5rem;
  }

  .ig-carousel__dot {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background: rgba(var(--color-text-rgb, 0, 0, 0), 0.2);
