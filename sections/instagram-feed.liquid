          /* Touch / Swipe */
          let startX = 0,
            diff = 0;
          this.addEventListener(
            'touchstart',
            (e) => {
              startX = e.touches[0].clientX;
              diff = 0;
            },
            { passive: true }
          );
          this.addEventListener(
            'touchmove',
            (e) => {
