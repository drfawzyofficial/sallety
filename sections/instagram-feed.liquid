          const perc = (this.currentIndex * 100) / this.slides.length;
          const dir = this.isRTL ? 1 : -1;
          this.track.style.transform = `translateX(${dir * perc}%)`;
          this.updateButtons();
          this.updateDots();
        }

        prev() {
          this.goTo(this.currentIndex - 1);
        }
        next() {
          this.goTo(this.currentIndex + 1);
        }

