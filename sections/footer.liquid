<script>
  /**
   * Footer Section - Block Components Initialization
   * Supports Shopify Theme Editor reactivity
   */
  (function () {
    'use strict';

    const SECTION_TYPE = 'footer';
    let scrollHandler = null;

    /**
     * Initialize Back to Top Button
     */
    function initBackToTop() {
      const backToTop = document.querySelector('[data-back-to-top]');
      if (!backToTop) return;

      const scrollThreshold = parseInt(backToTop.dataset.scrollThreshold) || 400;

      function toggleVisibility() {
        if (window.scrollY > scrollThreshold) {
          backToTop.classList.add('is-visible');
        } else {
          backToTop.classList.remove('is-visible');
        }
      }

      // Remove old handler if exists
      if (scrollHandler) {
        window.removeEventListener('scroll', scrollHandler);
      }

      // Click handler
      backToTop.onclick = function () {
        window.scrollTo({ top: 0, behavior: 'smooth' });
      };

      // Scroll handler with throttle
      let ticking = false;
      scrollHandler = function () {
        if (!ticking) {
          window.requestAnimationFrame(function () {
            toggleVisibility();
            ticking = false;
          });
          ticking = true;
        }
      };

      window.addEventListener('scroll', scrollHandler);
      toggleVisibility();
    }

    /**
     * Initialize Desktop FAB Menu
     */
    function initFabMenu() {
      const fabContainer = document.getElementById('floatingMenu');
      const fabToggle = document.getElementById('fabToggle');
      if (!fabContainer || !fabToggle) return;

      function toggleMenu() {
        const isOpen = fabContainer.classList.contains('is-open');
        fabContainer.classList.toggle('is-open');
        fabToggle.setAttribute('aria-expanded', String(!isOpen));
      }

      function closeMenu() {
        fabContainer.classList.remove('is-open');
        fabToggle.setAttribute('aria-expanded', 'false');
      }

      fabToggle.onclick = function (e) {
        e.preventDefault();
        e.stopPropagation();
        toggleMenu();
      };

      // Close on outside click
      document.addEventListener('click', function (e) {
        if (fabContainer && !fabContainer.contains(e.target)) {
          closeMenu();
        }
      });

      // Close on Escape
      document.addEventListener('keydown', function (e) {
        if (e.key === 'Escape' && fabContainer.classList.contains('is-open')) {
          closeMenu();
          fabToggle.focus();
        }
      });
    }

    /**
     * Initialize WhatsApp Button
     */
    function initWhatsApp() {
      const whatsappBtn = document.querySelector('[data-whatsapp-chat]');
      if (!whatsappBtn) return;

      whatsappBtn.onclick = function (e) {
        const number = this.dataset.whatsappNumber;
        const message = this.dataset.whatsappMessage || '';
        if (number) {
          const url = `https://wa.me/${number.replace(/[^0-9]/g, '')}?text=${encodeURIComponent(message)}`;
          window.open(url, '_blank', 'noopener,noreferrer');
        }
      };
    }

    /**
     * Initialize all footer components
     */
    function initFooterComponents() {
      initBackToTop();
      initFabMenu();
      initWhatsApp();
    }

    // Initialize on DOM ready
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initFooterComponents);
    } else {
      initFooterComponents();
    }

    // Shopify Theme Editor Events - Re-initialize on section/block changes
    document.addEventListener('shopify:section:load', function (e) {
      if (e.detail.sectionId && e.target.querySelector('[data-section-type="footer"]')) {
        initFooterComponents();
      }
    });

    document.addEventListener('shopify:section:reorder', function (e) {
      initFooterComponents();
    });

    document.addEventListener('shopify:block:select', function (e) {
      if (e.target.closest('[data-section-type="footer"]')) {
        initFooterComponents();
      }
    });

    document.addEventListener('shopify:block:deselect', function (e) {
      if (e.target.closest('[data-section-type="footer"]')) {
        initFooterComponents();
      }
    });

    // Cart count update
    document.addEventListener('cart:updated', function (e) {
      const cartCounts = document.querySelectorAll('.fab-cart-count, .mobile-nav-badge');
      cartCounts.forEach(function (el) {
