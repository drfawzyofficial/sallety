{%- comment -%}
  Footer Section - Dynamic Shopify Settings
  Fully connected with Shopify settings, color schemes, and typography
  RTL layout with Arabic labels
{%- endcomment -%}

{%- liquid
  # Color scheme assignment (native Shopify color_scheme)
  assign scheme_settings = section.settings.color_scheme.settings

  # Typography - Desktop
  assign heading_size_desktop = section.settings.heading_size_desktop | default: 22
  assign body_size_desktop = section.settings.body_size_desktop | default: 18

  # Typography - Tablet
  assign heading_size_tablet = section.settings.heading_size_tablet | default: 18
  assign body_size_tablet = section.settings.body_size_tablet | default: 16

  # Typography - Mobile
  assign heading_size_mobile = section.settings.heading_size_mobile | default: 16
  assign body_size_mobile = section.settings.body_size_mobile | default: 14

  # Typography - Weights
  assign heading_weight = section.settings.footer_heading_weight | default: '700'
  assign body_weight = section.settings.footer_body_weight | default: '400'

  # Colors from selected color scheme (native Shopify approach)
  assign bg_color = scheme_settings.background
  assign text_color = scheme_settings.text
  assign muted_color = scheme_settings.secondary_text
  assign border_color = scheme_settings.border

  # Section-specific color (newsletter background)
  assign newsletter_bg = section.settings.footer_newsletter_bg | default: '#cbd5e1'

  # Section settings
  assign store_name = section.settings.store_name | default: shop.name
  assign store_description = section.settings.store_description | default: 'متجرك الإلكتروني المميز لتجربة تسوق فريدة'

  # Contact info
  assign contact_title = section.settings.contact_title | default: 'تواصل معنا'
  assign phone = section.settings.phone
  assign mobile = section.settings.mobile
  assign email = section.settings.email
  assign telegram = section.settings.telegram

  # Newsletter
  assign newsletter_title = section.settings.newsletter_title | default: 'اشترك في النشرة البريدية ليصلك كل جديد!'
  assign newsletter_placeholder = section.settings.newsletter_placeholder | default: 'ادخل البريد الإلكتروني'
  assign newsletter_button = section.settings.newsletter_button | default: 'اشترك'

  # App links
  assign app_section_title = section.settings.app_section_title | default: 'تحميل تطبيق الجوال'
  assign google_play_link = section.settings.google_play_link
  assign app_store_link = section.settings.app_store_link
  assign show_app_badge = section.settings.show_app_badge

  # Links menu
  assign links_title = section.settings.links_title | default: 'روابط مهمة'
  assign footer_menu = section.settings.footer_menu
-%}

{%- capture section_dir -%}{%- render 'section-dir' -%}{%- endcapture -%}
<footer
  class="footer-section"
  dir="{{ section_dir }}"
  data-section-id="{{ section.id }}"
  data-section-type="footer"
  style="
    --footer-bg: {{ bg_color }};
    --footer-text: {{ text_color }};
    --footer-muted: {{ muted_color }};
    --footer-border: {{ border_color }};
    --footer-newsletter-bg: {{ newsletter_bg }};
    --footer-heading-desktop: {{ heading_size_desktop }}px;
    --footer-body-desktop: {{ body_size_desktop }}px;
    --footer-heading-tablet: {{ heading_size_tablet }}px;
    --footer-body-tablet: {{ body_size_tablet }}px;
    --footer-heading-mobile: {{ heading_size_mobile }}px;
    --footer-body-mobile: {{ body_size_mobile }}px;
    --footer-heading-weight: {{ heading_weight }};
    --footer-body-weight: {{ body_weight }};
    font-family: var(--font-body-family);
  "
>
  <!-- Parallax Decorative Shapes -->
  {%- if section.settings.show_parallax_shapes -%}
    <div class="footer-shapes">
      <div class="footer-shape footer-shape--1"></div>
      <div class="footer-shape footer-shape--2"></div>
      <div class="footer-shape footer-shape--3"></div>
      <div class="footer-shape footer-shape--4"></div>
      <div class="footer-shape footer-shape--5"></div>
      <div class="footer-shape footer-shape--6"></div>
      <div class="footer-shape footer-shape--7"></div>
      <div class="footer-shape footer-shape--dots"></div>
    </div>
  {%- endif -%}

  <!-- Main Footer Content -->
  <div class="footer-main">
    <div class="footer-container">
      <div class="footer-grid">
        <!-- Column 1: Logo & Description -->
        <div class="footer-column footer-column--logo">
          <div class="footer-logo-wrapper">
            {%- if section.settings.logo != blank -%}
              <div class="footer-logo-box">
                <img
                  src="{{ section.settings.logo | image_url: width: 120 }}"
                  alt="{{ store_name }}"
                  width="60"
                  height="60"
                  loading="lazy"
                  class="footer-logo-img"
                >
              </div>
            {%- else -%}
              <div class="footer-logo-box footer-logo-box--default">
                <svg viewBox="0 0 60 60" class="footer-logo-icon">
                  <rect x="15" y="8" width="30" height="44" rx="3" fill="var(--footer-bg)"/>
                  <path d="M22 18 L38 18 L38 24 L22 24 Z" fill="white"/>
                  <path d="M18 28 L42 28 L42 48 L18 48 Z" fill="white"/>
                  <ellipse cx="30" cy="38" rx="8" ry="10" fill="var(--footer-bg)"/>
                </svg>
              </div>
            {%- endif -%}
            <h2 class="footer-store-name">{{ store_name }}</h2>
          </div>
          <p class="footer-description">{{ store_description }}</p>
        </div>

        <!-- Column 2: Important Links -->
        <div class="footer-column footer-column--links">
          <h3 class="footer-heading">{{ links_title }}</h3>
          <ul class="footer-link-list">
            {%- if footer_menu != blank and linklists[footer_menu].links.size > 0 -%}
              {%- for link in linklists[footer_menu].links -%}
                <li>
                  <a href="{{ link.url }}" class="footer-link">{{ link.title }}</a>
                </li>
              {%- endfor -%}
            {%- else -%}
              <!-- Fallback links when no menu is selected -->
              <li><a href="/pages/about" class="footer-link">عن المتجر</a></li>
              <li><a href="/pages/contact" class="footer-link">تواصل معنا</a></li>
              <li><a href="/pages/privacy-policy" class="footer-link">سياسة الخصوصية</a></li>
              <li><a href="/pages/terms-of-service" class="footer-link">الشروط والأحكام</a></li>
              <li><a href="/pages/shipping-policy" class="footer-link">سياسة الشحن</a></li>
              <li><a href="/pages/refund-policy" class="footer-link">سياسة الاسترجاع</a></li>
            {%- endif -%}
          </ul>
        </div>

        <!-- Column 3: Contact Info -->
        <div class="footer-column footer-column--contact">
          <h3 class="footer-heading">{{ contact_title }}</h3>
          <ul class="footer-contact-list">
            {%- if mobile != blank -%}
              <li class="footer-contact-item">
                <div class="footer-contact-icon">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="1.5"
                  >
                    <rect x="7" y="2" width="10" height="20" rx="2" />
                    <line x1="12" y1="18" x2="12" y2="18.01" stroke-width="2" stroke-linecap="round" />
                  </svg>
                </div>
                <a href="tel:{{ mobile }}" class="footer-contact-text" dir="ltr">{{ mobile }}</a>
              </li>
            {%- endif -%}

            {%- if phone != blank -%}
              <li class="footer-contact-item">
                <div class="footer-contact-icon">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="1.5"
                  >
                    <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
                  </svg>
                </div>
                <a href="tel:{{ phone }}" class="footer-contact-text" dir="ltr">{{ phone }}</a>
              </li>
            {%- endif -%}

            {%- if email != blank -%}
              <li class="footer-contact-item">
                <div class="footer-contact-icon">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="1.5"
                  >
                    <rect x="2" y="4" width="20" height="16" rx="2"/>
                    <path d="M22 6l-10 7L2 6"/>
                  </svg>
                </div>
                <a href="mailto:{{ email }}" class="footer-contact-text" dir="ltr">{{ email }}</a>
              </li>
            {%- endif -%}

            {%- if telegram != blank -%}
              <li class="footer-contact-item">
                <div class="footer-contact-icon">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm4.64 6.8c-.15 1.58-.8 5.42-1.13 7.19-.14.75-.42 1-.68 1.03-.58.05-1.02-.38-1.58-.75-.88-.58-1.38-.94-2.23-1.5-.99-.65-.35-1.01.22-1.59.15-.15 2.71-2.48 2.76-2.69a.2.2 0 00-.05-.18c-.06-.05-.14-.03-.21-.02-.09.02-1.49.95-4.22 2.79-.4.27-.76.41-1.08.4-.36-.01-1.04-.2-1.55-.37-.63-.2-1.12-.31-1.08-.66.02-.18.27-.36.74-.55 2.92-1.27 4.86-2.11 5.83-2.51 2.78-1.16 3.35-1.36 3.73-1.36.08 0 .27.02.39.12.1.08.13.19.14.27-.01.06.01.24 0 .38z"/>
                  </svg>
                </div>
                <a
                  href="https://t.me/{{ telegram }}"
                  class="footer-contact-text"
                  dir="ltr"
                  target="_blank"
                  rel="noopener"
                >
                  {{- telegram -}}
                </a>
              </li>
            {%- endif -%}

            {%- comment %} Show placeholder if no contact info {%- endcomment %}
            {%- if mobile == blank and phone == blank and email == blank and telegram == blank -%}
              <li class="footer-contact-item">
                <div class="footer-contact-icon">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="1.5"
                  >
                    <rect x="7" y="2" width="10" height="20" rx="2" />
                    <line x1="12" y1="18" x2="12" y2="18.01" stroke-width="2" stroke-linecap="round" />
                  </svg>
                </div>
                <span class="footer-contact-text" dir="ltr">أضف رقم الهاتف</span>
              </li>
              <li class="footer-contact-item">
                <div class="footer-contact-icon">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="1.5"
                  >
                    <rect x="2" y="4" width="20" height="16" rx="2"/>
                    <path d="M22 6l-10 7L2 6"/>
                  </svg>
                </div>
                <span class="footer-contact-text" dir="ltr">أضف البريد الإلكتروني</span>
              </li>
            {%- endif -%}
          </ul>

          <!-- Social Icons from General Settings -->
          {%- if section.settings.show_social_icons -%}
            <div class="footer-social">
              {%- if settings.social_instagram_link != blank -%}
                <a
                  href="{{ settings.social_instagram_link }}"
                  class="footer-social-link"
                  aria-label="Instagram"
