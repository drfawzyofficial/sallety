          <div class="footer-column footer-column--app">
            <!-- Saudi Business Authentication Badge -->
            {%- if section.settings.show_saudi_auth -%}
              {%- if section.settings.saudi_auth_url != blank -%}
                <a
                  href="{{ section.settings.saudi_auth_url }}"
                  class="footer-saudi-auth"
                  target="_blank"
                  rel="noopener noreferrer"
                  aria-label="موثّق في منصة الأعمال السعودية"
