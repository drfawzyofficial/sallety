{%- comment -%}
  Sallety Theme - Image Banner Section
  Add your custom image banner design here.
{%- endcomment -%}

<section class="image-banner section" data-section-id="{{ section.id }}" data-section-type="image-banner">
  <div class="image-banner__container{% if section.settings.full_width %} image-banner--full-width{% endif %}">
    <div class="image-banner__image">
      {%- if section.settings.image != blank -%}
        <img
          src="{{ section.settings.image | image_url: width: 1920 }}"
          alt="{{ section.settings.heading | escape }}"
          width="1920"
          height="{{ 1920 | divided_by: section.settings.image.aspect_ratio }}"
          loading="lazy"
        >
      {%- else -%}
        {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg' }}
      {%- endif -%}
    </div>
    
    <div class="image-banner__overlay" style="opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};"></div>
    
    <div class="image-banner__content">
      {%- if section.settings.heading != blank -%}
        <h2 class="image-banner__heading">{{ section.settings.heading }}</h2>
      {%- endif -%}
      {%- if section.settings.text != blank -%}
        <p class="image-banner__text">{{ section.settings.text }}</p>
      {%- endif -%}
      {%- if section.settings.button_label != blank -%}
        <a href="{{ section.settings.button_link }}" class="image-banner__button button button--primary">
          {{ section.settings.button_label }}
        </a>
      {%- endif -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "t:sections.image_banner.name",
  "class": "section-image-banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "t:sections.image_banner.settings.image.label"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "label": "t:sections.image_banner.settings.image_overlay_opacity.label",
      "default": 30,
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "%"
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "t:sections.image_banner.settings.full_width.label",
      "default": true
    },
    {
      "type": "text",
      "id": "heading",
      "label": "t:sections.image_banner.settings.heading.label",
      "default": "بانر صورة"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "t:sections.image_banner.settings.text.label"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "t:sections.image_banner.settings.button_label.label",
      "default": "تسوق الآن"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "t:sections.image_banner.settings.button_link.label"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "t:sections.all.padding.padding_top",
      "default": 0,
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 0,
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px"
    }
  ],
  "presets": [
    {
      "name": "t:sections.image_banner.name"
    }
  ]
}
{% endschema %}

