{%- comment -%}
  صفحة الخطأ 404 - تصميم احترافي
  قالب سالتي - متجاوب مع جميع الشاشات - يدعم RTL و LTR
{%- endcomment -%}

{%- liquid
  assign scheme_number = section.settings.color_scheme.id | remove: 'scheme-'
-%}

<style>
  .error-404-section {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-background);
    color: var(--color-foreground);
    padding: {{ section.settings.padding_top_mobile }}px {{ section.settings.padding_horizontal_mobile }}px {{ section.settings.padding_bottom_mobile }}px;
    position: relative;
    overflow: hidden;
  }

  @media screen and (min-width: 768px) {
    .error-404-section {
      padding: {{ section.settings.padding_top }}px {{ section.settings.padding_horizontal }}px {{ section.settings.padding_bottom }}px;
    }
  }

  /* Background Pattern */
  .error-404__bg-pattern {
    position: absolute;
    inset: 0;
    opacity: {{ section.settings.pattern_opacity | divided_by: 100.0 }};
    pointer-events: none;
    z-index: 0;
  }

  .error-404__bg-pattern svg {
    width: 100%;
    height: 100%;
  }

  /* Floating Shapes */
  .error-404__shapes {
    position: absolute;
    inset: 0;
    pointer-events: none;
    z-index: 1;
    overflow: hidden;
  }

  .error-404__shape {
    position: absolute;
    border-radius: 50%;
    filter: blur({{ section.settings.shapes_blur }}px);
    animation: float-shape 20s ease-in-out infinite;
  }

  .error-404__shape--1 {
    width: clamp(150px, 30vw, 400px);
    height: clamp(150px, 30vw, 400px);
    background: var(--color-accent);
    opacity: {{ section.settings.shape_1_opacity | divided_by: 100.0 }};
    top: -10%;
    inset-inline-start: -5%;
    animation-delay: 0s;
  }

  .error-404__shape--2 {
    width: clamp(100px, 20vw, 300px);
    height: clamp(100px, 20vw, 300px);
    background: var(--color-primary);
    opacity: {{ section.settings.shape_2_opacity | divided_by: 100.0 }};
    bottom: -5%;
    inset-inline-end: -5%;
    animation-delay: -5s;
  }

  .error-404__shape--3 {
    width: clamp(80px, 15vw, 200px);
    height: clamp(80px, 15vw, 200px);
    background: var(--color-foreground);
    opacity: {{ section.settings.shape_3_opacity | divided_by: 100.0 }};
    top: 50%;
    inset-inline-end: 10%;
    animation-delay: -10s;
  }

  @keyframes float-shape {
    0%, 100% { transform: translate(0, 0) scale(1); }
    25% { transform: translate(20px, -20px) scale(1.05); }
    50% { transform: translate(-10px, 20px) scale(0.95); }
    75% { transform: translate(-20px, -10px) scale(1.02); }
  }

  /* Main Container */
  .error-404__container {
    position: relative;
    z-index: 2;
    width: 100%;
    max-width: {{ section.settings.container_max_width }}px;
    margin: 0 auto;
  }

  /* Card */
  .error-404__card {
    background: var(--color-card-background);
    border-radius: {{ section.settings.card_border_radius }}px;
    border: {{ section.settings.card_border_width }}px solid var(--color-border);
    box-shadow: 0 {{ section.settings.card_shadow_y }}px {{ section.settings.card_shadow_blur }}px rgba(0, 0, 0, {{ section.settings.card_shadow_opacity | divided_by: 100.0 }});
    padding: {{ section.settings.card_padding_mobile }}px;
    text-align: center;
    position: relative;
    overflow: hidden;
    color: var(--color-card-text);
  }

  @media screen and (min-width: 768px) {
    .error-404__card {
      padding: {{ section.settings.card_padding }}px;
    }
  }

  /* Error Code */
  .error-404__code {
    font-size: clamp({{ section.settings.error_code_size_mobile }}px, 15vw, {{ section.settings.error_code_size }}px);
    font-weight: {{ section.settings.error_code_weight }};
    color: var(--color-accent);
    line-height: 1;
    margin: 0;
    opacity: {{ section.settings.error_code_opacity | divided_by: 100.0 }};
    font-family: var(--font-heading-family);
    letter-spacing: {{ section.settings.error_code_letter_spacing }}px;
    {% if section.settings.error_code_gradient %}
    background: linear-gradient(135deg, var(--color-accent), var(--color-primary));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    {% endif %}
  }

  /* Icon */
  .error-404__icon {
    width: {{ section.settings.icon_size_mobile }}px;
    height: {{ section.settings.icon_size_mobile }}px;
    margin: {{ section.settings.icon_margin_top }}px auto {{ section.settings.icon_margin_bottom }}px;
    color: var(--color-accent);
    opacity: {{ section.settings.icon_opacity | divided_by: 100.0 }};
  }

  @media screen and (min-width: 768px) {
    .error-404__icon {
      width: {{ section.settings.icon_size }}px;
      height: {{ section.settings.icon_size }}px;
    }
  }

  .error-404__icon svg {
    width: 100%;
    height: 100%;
  }

  /* Heading */
  .error-404__heading {
    font-size: clamp({{ section.settings.heading_size_mobile }}px, 4vw, {{ section.settings.heading_size }}px);
    font-weight: {{ section.settings.heading_weight }};
    color: var(--color-foreground);
    margin: 0 0 {{ section.settings.heading_margin_bottom }}px;
    line-height: {{ section.settings.heading_line_height }};
    font-family: var(--font-heading-family);
  }

  /* Description */
  .error-404__description {
    font-size: clamp({{ section.settings.description_size_mobile }}px, 2vw, {{ section.settings.description_size }}px);
    color: var(--color-secondary-text, var(--color-foreground));
    margin: 0 auto {{ section.settings.description_margin_bottom }}px;
    max-width: {{ section.settings.description_max_width }}px;
    line-height: {{ section.settings.description_line_height }};
    opacity: 0.8;
  }

  /* Search Form */
  .error-404__search {
    max-width: {{ section.settings.search_max_width }}px;
    margin: 0 auto {{ section.settings.search_margin_bottom }}px;
  }

  .error-404__search-form {
    display: flex;
    gap: {{ section.settings.search_gap }}px;
    flex-direction: column;
  }

  @media screen and (min-width: 640px) {
    .error-404__search-form {
      flex-direction: row;
    }
  }

  .error-404__search-input {
    flex: 1;
    height: {{ section.settings.search_input_height }}px;
    padding: 0 {{ section.settings.search_input_padding }}px;
    border: {{ section.settings.search_border_width }}px solid var(--color-border);
    border-radius: {{ section.settings.search_border_radius }}px;
    background: var(--color-background);
    font-size: {{ section.settings.search_font_size }}px;
    color: var(--color-foreground);
    transition: all 0.3s ease;
  }

  .error-404__search-input::placeholder {
    color: var(--color-secondary-text, var(--color-foreground));
    opacity: 0.7;
  }

  .error-404__search-input:focus {
    outline: none;
    border-color: var(--color-accent);
    box-shadow: 0 0 0 {{ section.settings.search_focus_ring_width }}px color-mix(in srgb, var(--color-accent) 20%, transparent);
  }

  .error-404__search-btn {
    height: {{ section.settings.search_input_height }}px;
    padding: 0 {{ section.settings.search_button_padding }}px;
    background: var(--color-button);
    color: var(--color-button-label);
    border: none;
    border-radius: {{ section.settings.search_border_radius }}px;
    font-size: {{ section.settings.search_font_size }}px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    white-space: nowrap;
  }

  .error-404__search-btn:hover {
    filter: brightness(1.1);
    transform: translateY(-2px);
  }

  .error-404__search-btn svg {
    width: 20px;
    height: 20px;
    flex-shrink: 0;
  }

  /* Buttons */
  .error-404__buttons {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: {{ section.settings.buttons_gap }}px;
    margin-top: {{ section.settings.buttons_margin_top }}px;
  }

  .error-404__btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    padding: {{ section.settings.button_padding_y }}px {{ section.settings.button_padding_x }}px;
    font-size: {{ section.settings.button_font_size }}px;
    font-weight: {{ section.settings.button_font_weight }};
    text-decoration: none;
    border-radius: {{ section.settings.button_border_radius }}px;
    transition: all 0.3s ease;
    min-width: {{ section.settings.button_min_width }}px;
  }

  @media screen and (max-width: 639px) {
    .error-404__btn {
      width: 100%;
      min-width: auto;
    }
  }

  .error-404__btn svg {
    width: 20px;
    height: 20px;
    flex-shrink: 0;
  }

  .error-404__btn--primary {
    background: var(--color-button);
    color: var(--color-button-label);
    border: {{ section.settings.button_border_width }}px solid var(--color-button);
  }

  .error-404__btn--primary:hover {
    background: transparent;
    color: var(--color-button);
    transform: translateY(-2px);
    box-shadow: 0 10px 20px color-mix(in srgb, var(--color-button) 20%, transparent);
  }

  .error-404__btn--secondary {
    background: transparent;
    color: var(--color-foreground);
    border: {{ section.settings.button_border_width }}px solid var(--color-border);
  }

  .error-404__btn--secondary:hover {
    border-color: var(--color-accent);
    background: color-mix(in srgb, var(--color-accent) 5%, transparent);
    transform: translateY(-2px);
  }

  /* Suggested Links */
  .error-404__suggestions {
    margin-top: {{ section.settings.suggestions_margin_top }}px;
    padding-top: {{ section.settings.suggestions_padding_top }}px;
    border-top: 1px solid var(--color-border);
  }

  .error-404__suggestions-title {
    font-size: {{ section.settings.suggestions_title_size }}px;
    font-weight: 600;
    color: var(--color-foreground);
    margin: 0 0 {{ section.settings.suggestions_title_margin }}px;
  }

  .error-404__suggestions-list {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: {{ section.settings.suggestions_gap }}px;
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .error-404__suggestions-link {
    color: var(--color-accent);
    text-decoration: none;
    font-size: {{ section.settings.suggestions_link_size }}px;
    padding: 8px 16px;
    border-radius: 20px;
    background: color-mix(in srgb, var(--color-accent) 10%, transparent);
    transition: all 0.3s ease;
  }

  .error-404__suggestions-link:hover {
    background: var(--color-button);
    color: var(--color-button-label);
  }

  /* Animation Classes */
  {% if section.settings.enable_animations %}
  .error-404__card > * {
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.6s ease forwards;
  }

  .error-404__code { animation-delay: 0.1s; }
  .error-404__icon { animation-delay: 0.2s; }
  .error-404__heading { animation-delay: 0.3s; }
  .error-404__description { animation-delay: 0.4s; }
  .error-404__search { animation-delay: 0.5s; }
  .error-404__buttons { animation-delay: 0.6s; }
  .error-404__suggestions { animation-delay: 0.7s; }

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  {% endif %}
</style>

<section class="error-404-section color-scheme-{{ scheme_number }}" aria-labelledby="error-heading">
  {%- if section.settings.show_background_pattern -%}
    <div class="error-404__bg-pattern">
      <svg width="100%" height="100%">
        <defs>
          <pattern id="grid-pattern-{{ section.id }}" width="40" height="40" patternUnits="userSpaceOnUse">
            <circle cx="20" cy="20" r="1" fill="currentColor" opacity="0.3"/>
          </pattern>
        </defs>
        <rect width="100%" height="100%" fill="url(#grid-pattern-{{ section.id }})" style="color: var(--error-text);"/>
      </svg>
    </div>
  {%- endif -%}

  {%- if section.settings.show_floating_shapes -%}
    <div class="error-404__shapes">
      <div class="error-404__shape error-404__shape--1"></div>
      <div class="error-404__shape error-404__shape--2"></div>
      <div class="error-404__shape error-404__shape--3"></div>
    </div>
  {%- endif -%}

  <div class="error-404__container">
    <div class="error-404__card">
      {%- if section.settings.show_error_code -%}
        <p class="error-404__code" aria-hidden="true">{{ section.settings.error_code_text }}</p>
      {%- endif -%}

      {%- if section.settings.show_icon -%}
        <div class="error-404__icon">
          {%- case section.settings.icon_type -%}
            {%- when 'search' -%}
              <svg
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="1.5"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <circle cx="11" cy="11" r="8"/>
                <path d="M21 21l-4.35-4.35"/>
                <path d="M8 8l6 6" opacity="0.5"/>
              </svg>
            {%- when 'compass' -%}
              <svg
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="1.5"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <circle cx="12" cy="12" r="10"/>
                <polygon points="16.24 7.76 14.12 14.12 7.76 16.24 9.88 9.88 16.24 7.76" fill="currentColor" opacity="0.2"/>
              </svg>
            {%- when 'map' -%}
              <svg
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="1.5"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0118 0z"/>
                <circle cx="12" cy="10" r="3"/>
              </svg>
            {%- when 'sad' -%}
              <svg
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="1.5"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <circle cx="12" cy="12" r="10"/>
                <path d="M16 16s-1.5-2-4-2-4 2-4 2"/>
                <line x1="9" y1="9" x2="9.01" y2="9"/>
                <line x1="15" y1="9" x2="15.01" y2="9"/>
              </svg>
            {%- when 'broken-link' -%}
              <svg
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="1.5"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <path d="M15 7h3a5 5 0 015 5 5 5 0 01-5 5h-3m-6 0H6a5 5 0 01-5-5 5 5 0 015-5h3"/>
                <line x1="8" y1="12" x2="16" y2="12" stroke-dasharray="2 2"/>
              </svg>
            {%- else -%}
              <svg
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="1.5"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <path d="M14.5 10c-.83 0-1.5-.67-1.5-1.5v-5c0-.83.67-1.5 1.5-1.5s1.5.67 1.5 1.5v5c0 .83-.67 1.5-1.5 1.5z" fill="currentColor" opacity="0.2"/>
                <path d="M20.5 10H19V8.5c0-.83.67-1.5 1.5-1.5s1.5.67 1.5 1.5-.67 1.5-1.5 1.5z"/>
                <path d="M9.5 14c.83 0 1.5.67 1.5 1.5v5c0 .83-.67 1.5-1.5 1.5S8 21.33 8 20.5v-5c0-.83.67-1.5 1.5-1.5z" fill="currentColor" opacity="0.2"/>
                <path d="M3.5 14H5v1.5c0 .83-.67 1.5-1.5 1.5S2 16.33 2 15.5 2.67 14 3.5 14z"/>
                <path d="M14 14.5c0-.83.67-1.5 1.5-1.5h5c.83 0 1.5.67 1.5 1.5s-.67 1.5-1.5 1.5h-5c-.83 0-1.5-.67-1.5-1.5z" fill="currentColor" opacity="0.2"/>
                <path d="M14 20.5c0-.83.67-1.5 1.5-1.5h1.5v1.5c0 .83-.67 1.5-1.5 1.5s-1.5-.67-1.5-1.5z"/>
                <path d="M10 9.5C10 10.33 9.33 11 8.5 11h-5C2.67 11 2 10.33 2 9.5S2.67 8 3.5 8h5c.83 0 1.5.67 1.5 1.5z" fill="currentColor" opacity="0.2"/>
                <path d="M10 3.5C10 4.33 9.33 5 8.5 5H7V3.5C7 2.67 7.67 2 8.5 2s1.5.67 1.5 1.5z"/>
              </svg>
          {%- endcase -%}
        </div>
      {%- endif -%}

      <h1 id="error-heading" class="error-404__heading">
        {{ section.settings.heading }}
      </h1>

      <p class="error-404__description">
        {{ section.settings.description }}
      </p>

      {%- if section.settings.show_search -%}
        <div class="error-404__search">
          <form action="{{ routes.search_url }}" method="get" role="search" class="error-404__search-form">
            <input
              type="search"
              name="q"
              class="error-404__search-input"
              placeholder="{{ section.settings.search_placeholder }}"
              aria-label="{{ section.settings.search_placeholder }}"
            >
            <button type="submit" class="error-404__search-btn">
              <svg
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <circle cx="11" cy="11" r="8"/>
                <path d="M21 21l-4.35-4.35"/>
              </svg>
              <span>{{ section.settings.search_button_text }}</span>
            </button>
          </form>
        </div>
      {%- endif -%}

      <div class="error-404__buttons">
        {%- if section.settings.show_home_button -%}
          <a href="{{ routes.root_url }}" class="error-404__btn error-404__btn--primary">
            {%- if section.settings.show_button_icons -%}
              <svg
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <path d="M3 9l9-7 9 7v11a2 2 0 01-2 2H5a2 2 0 01-2-2z"/>
                <polyline points="9 22 9 12 15 12 15 22"/>
              </svg>
            {%- endif -%}
            {{ section.settings.home_button_text }}
          </a>
        {%- endif -%}

        {%- if section.settings.show_shop_button -%}
          <a href="{{ routes.all_products_collection_url }}" class="error-404__btn error-404__btn--secondary">
            {%- if section.settings.show_button_icons -%}
              <svg
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <path d="M6 2L3 6v14a2 2 0 002 2h14a2 2 0 002-2V6l-3-4z"/>
                <line x1="3" y1="6" x2="21" y2="6"/>
                <path d="M16 10a4 4 0 01-8 0"/>
              </svg>
            {%- endif -%}
            {{ section.settings.shop_button_text }}
          </a>
        {%- endif -%}

        {%- if section.settings.show_contact_button -%}
          <a href="{{ section.settings.contact_button_link }}" class="error-404__btn error-404__btn--secondary">
            {%- if section.settings.show_button_icons -%}
              <svg
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
                <polyline points="22,6 12,13 2,6"/>
              </svg>
            {%- endif -%}
            {{ section.settings.contact_button_text }}
          </a>
        {%- endif -%}

        {%- if section.settings.show_back_button -%}
          <button type="button" onclick="history.back()" class="error-404__btn error-404__btn--secondary">
            {%- if section.settings.show_button_icons -%}
              <svg
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <line x1="19" y1="12" x2="5" y2="12"/>
                <polyline points="12 19 5 12 12 5"/>
              </svg>
            {%- endif -%}
            {{ section.settings.back_button_text }}
          </button>
        {%- endif -%}
      </div>

      {%- if section.settings.show_suggestions -%}
        <div class="error-404__suggestions">
          <h2 class="error-404__suggestions-title">{{ section.settings.suggestions_title }}</h2>
          <ul class="error-404__suggestions-list">
            {%- if section.settings.suggestion_1_text != blank -%}
              <li>
                <a href="{{ section.settings.suggestion_1_link }}" class="error-404__suggestions-link">
                  {{ section.settings.suggestion_1_text }}
                </a>
              </li>
            {%- endif -%}
            {%- if section.settings.suggestion_2_text != blank -%}
              <li>
                <a href="{{ section.settings.suggestion_2_link }}" class="error-404__suggestions-link">
                  {{ section.settings.suggestion_2_text }}
                </a>
              </li>
            {%- endif -%}
            {%- if section.settings.suggestion_3_text != blank -%}
              <li>
                <a href="{{ section.settings.suggestion_3_link }}" class="error-404__suggestions-link">
                  {{ section.settings.suggestion_3_text }}
                </a>
              </li>
            {%- endif -%}
            {%- if section.settings.suggestion_4_text != blank -%}
              <li>
                <a href="{{ section.settings.suggestion_4_link }}" class="error-404__suggestions-link">
                  {{ section.settings.suggestion_4_text }}
                </a>
              </li>
            {%- endif -%}
            {%- if section.settings.suggestion_5_text != blank -%}
              <li>
                <a href="{{ section.settings.suggestion_5_link }}" class="error-404__suggestions-link">
                  {{ section.settings.suggestion_5_text }}
                </a>
              </li>
            {%- endif -%}
          </ul>
        </div>
      {%- endif -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "t:sections.main_404.name",
  "tag": "section",
  "class": "section section-404",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
