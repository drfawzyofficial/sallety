{%- comment -%}
  Sallety Theme - Pagination Snippet
  Renders numbered pagination with previous/next navigation.
  Supports accessibility and RTL layouts.

  Accepts:
  - paginate: {Object} Paginate Liquid object

  Usage:
  {% render 'pagination', paginate: paginate %}
{%- endcomment -%}

{%- if paginate.pages > 1 -%}
  <nav class="pagination flex items-center justify-center gap-1.5 mt-8 md:mt-12" role="navigation" aria-label="{{ 'accessibility.pagination' | t }}">

    {%- comment -%} Previous Button {%- endcomment -%}
    {%- if paginate.previous -%}
      <a
        href="{{ paginate.previous.url }}"
        class="pagination__item pagination__item--prev flex items-center justify-center w-10 h-10 rounded-lg border transition-all duration-200 hover:border-current"
        style="border-color: var(--color-border); color: var(--color-foreground);"
        aria-label="{{ 'general.pagination.previous' | t }}"
      >
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <polyline points="15 18 9 12 15 6"></polyline>
        </svg>
      </a>
    {%- else -%}
      <span
        class="pagination__item pagination__item--prev pagination__item--disabled flex items-center justify-center w-10 h-10 rounded-lg border opacity-30 cursor-not-allowed"
        style="border-color: var(--color-border);"
        aria-disabled="true"
      >
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <polyline points="15 18 9 12 15 6"></polyline>
        </svg>
      </span>
    {%- endif -%}

    {%- comment -%} Page Numbers {%- endcomment -%}
    {%- for part in paginate.parts -%}
      {%- if part.is_link -%}
        <a
          href="{{ part.url }}"
          class="pagination__item flex items-center justify-center min-w-[40px] h-10 px-2 rounded-lg border text-sm font-medium transition-all duration-200 hover:border-current"
          style="border-color: var(--color-border); color: var(--color-foreground);"
          aria-label="{{ 'general.pagination.page' | t: number: part.title | default: part.title }}"
        >
          {{ part.title }}
        </a>
      {%- else -%}
        {%- if part.title == paginate.current_page -%}
          <span
            class="pagination__item is-active flex items-center justify-center min-w-[40px] h-10 px-2 rounded-lg text-sm font-semibold"
            style="background-color: var(--color-primary); color: var(--color-background); border: 1px solid var(--color-primary);"
            aria-current="page"
          >
            {{ part.title }}
          </span>
        {%- else -%}
          <span
            class="pagination__item pagination__item--gap flex items-center justify-center min-w-[40px] h-10 text-sm"
            style="color: var(--color-secondary-text);"
          >
            {{ part.title }}
          </span>
        {%- endif -%}
      {%- endif -%}
    {%- endfor -%}

    {%- comment -%} Next Button {%- endcomment -%}
    {%- if paginate.next -%}
      <a
        href="{{ paginate.next.url }}"
        class="pagination__item pagination__item--next flex items-center justify-center w-10 h-10 rounded-lg border transition-all duration-200 hover:border-current"
        style="border-color: var(--color-border); color: var(--color-foreground);"
        aria-label="{{ 'general.pagination.next' | t }}"
      >
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <polyline points="9 18 15 12 9 6"></polyline>
        </svg>
      </a>
    {%- else -%}
      <span
        class="pagination__item pagination__item--next pagination__item--disabled flex items-center justify-center w-10 h-10 rounded-lg border opacity-30 cursor-not-allowed"
        style="border-color: var(--color-border);"
        aria-disabled="true"
      >
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <polyline points="9 18 15 12 9 6"></polyline>
        </svg>
      </span>
    {%- endif -%}
  </nav>
{%- endif -%}
