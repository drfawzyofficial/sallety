{%- comment -%}
  Sallety Theme - Social Icons Snippet
  Renders social media links from theme settings.

  Usage:
  {% render 'social-icons' %}
{%- endcomment -%}

<div class="social-icons">
  {%- if settings.social_facebook_link != blank -%}
    <a href="{{ settings.social_facebook_link }}" target="_blank" rel="noopener noreferrer" class="social-icons__link" aria-label="{{ 'general.social.links.facebook' | t }}">
      {% render 'icon-facebook' %}
    </a>
  {%- endif -%}

