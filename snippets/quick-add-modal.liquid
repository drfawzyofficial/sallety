{%- comment -%}
  Sallety Theme - Quick Add Modal
  Lightweight modal for selecting variants and adding to cart
  directly from product cards (featured-collection, collection page, etc.)
  RTL-first design matching the theme aesthetic.

  Usage:
  {% render 'quick-add-modal' %}
{%- endcomment -%}

<style>
  .quick-add-modal {
    position: fixed;
    inset: 0;
    z-index: 1001;
    display: none;
    align-items: flex-end;
    justify-content: center;
    padding: 0;
  }

  @media (min-width: 640px) {
    .quick-add-modal {
      align-items: center;
      padding: 24px;
    }
  }

  .quick-add-modal.is-open {
    display: flex;
  }

  .quick-add-modal__overlay {
    position: absolute;
    inset: 0;
    background-color: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(4px);
    -webkit-backdrop-filter: blur(4px);
  }

  .quick-add-modal__content {
    position: relative;
    width: 100%;
    max-width: 639px;
    max-height: 90vh;
    background-color: var(--color-background, #fff);
    overflow: hidden;
    animation: quickAddSlideUp 0.3s ease-out;
    border-radius: 20px 20px 0 0;
    box-shadow: 0 -4px 30px rgba(0, 0, 0, 0.15);
  }

  @media (min-width: 640px) {
    .quick-add-modal__content {
      border-radius: 20px;
      box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
      animation: quickAddFadeIn 0.3s ease-out;
    }
  }

  @keyframes quickAddSlideUp {
    from {
      opacity: 0;
      transform: translateY(100%);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes quickAddFadeIn {
    from {
      opacity: 0;
      transform: translateY(20px) scale(0.95);
    }
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  .quick-add-modal__close {
    position: absolute;
    top: 12px;
    z-index: 10;
    width: 36px;
    height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    background-color: rgba(0, 0, 0, 0.06);
    border: none;
    cursor: pointer;
    transition: background-color 0.2s;
  }

  [dir='rtl'] .quick-add-modal__close {
    left: 12px;
  }
  [dir='ltr'] .quick-add-modal__close {
    right: 12px;
  }

  .quick-add-modal__close:hover {
    background-color: rgba(0, 0, 0, 0.1);
  }

  .quick-add-modal__body {
    overflow-y: auto;
    max-height: 85vh;
    -webkit-overflow-scrolling: touch;
  }

  @media (min-width: 640px) {
    .quick-add-modal__body {
      max-height: 80vh;
    }
  }

  .quick-add-modal__header {
    display: flex;
    align-items: center;
    gap: 16px;
    padding: 20px 20px 16px;
    border-bottom: 1px solid var(--color-border, #e5e7eb);
  }

  .quick-add-modal__product-image {
    width: 80px;
    height: 80px;
    border-radius: 12px;
    object-fit: cover;
    flex-shrink: 0;
    background: #f5f5f7;
  }

  .quick-add-modal__product-info {
    flex: 1;
    min-width: 0;
  }

  .quick-add-modal__product-title {
    font-size: 1rem;
    font-weight: 600;
    color: var(--color-foreground, #1a1a1a);
    margin: 0 0 6px;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    line-height: 1.4;
  }

  .quick-add-modal__product-price {
    display: flex;
    align-items: center;
    gap: 8px;
    flex-wrap: wrap;
  }

  .quick-add-modal__price-current {
    font-size: 1.1rem;
    font-weight: 700;
    color: var(--color-foreground, #1a1a1a);
  }

  .quick-add-modal__price-current.on-sale {
    color: var(--color-error, #dc2626);
  }

  .quick-add-modal__price-compare {
    font-size: 0.85rem;
    color: var(--color-secondary-text, #9ca3af);
    text-decoration: line-through;
  }

  .quick-add-modal__options {
    padding: 20px;
  }

  .quick-add-modal__option-group {
    margin-bottom: 20px;
  }

  .quick-add-modal__option-group:last-child {
    margin-bottom: 0;
  }

  .quick-add-modal__option-label {
    display: block;
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-foreground, #1a1a1a);
    margin-bottom: 10px;
  }

  .quick-add-modal__option-label span {
    font-weight: 400;
    color: var(--color-secondary-text, #6b7280);
  }

  .quick-add-modal__option-values {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
  }

  .quick-add-modal__option-btn {
    position: relative;
    min-width: 44px;
    height: 40px;
    padding: 0 14px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border: 2px solid var(--color-border, #e5e7eb);
    border-radius: 10px;
    background: var(--color-background, #fff);
    color: var(--color-foreground, #1a1a1a);
    font-size: 0.875rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s ease;
    white-space: nowrap;
  }

  .quick-add-modal__option-btn:hover {
    border-color: var(--color-primary, #1a2744);
  }

  .quick-add-modal__option-btn.is-active {
    border-color: var(--color-primary, #1a2744);
    background: var(--color-primary, #1a2744);
    color: #fff;
  }

  .quick-add-modal__option-btn.is-unavailable {
    opacity: 0.35;
    cursor: not-allowed;
    text-decoration: line-through;
  }

  /* Color swatches */
  .quick-add-modal__color-btn {
    width: 36px;
    height: 36px;
    min-width: 36px;
    padding: 0;
    border-radius: 50%;
    border: 2px solid var(--color-border, #e5e7eb);
    cursor: pointer;
    transition: all 0.2s ease;
    position: relative;
  }

  .quick-add-modal__color-btn:hover {
    transform: scale(1.1);
  }

  .quick-add-modal__color-btn.is-active {
    border-color: var(--color-primary, #1a2744);
    box-shadow: 0 0 0 2px var(--color-background, #fff), 0 0 0 4px var(--color-primary, #1a2744);
  }

  .quick-add-modal__color-btn.is-unavailable {
    opacity: 0.35;
    cursor: not-allowed;
  }

  .quick-add-modal__color-swatch {
    display: block;
    width: 100%;
    height: 100%;
    border-radius: 50%;
  }

  .quick-add-modal__footer {
    padding: 16px 20px 20px;
    border-top: 1px solid var(--color-border, #e5e7eb);
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .quick-add-modal__quantity-row {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 12px;
  }

  .quick-add-modal__quantity-label {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-foreground, #1a1a1a);
  }

  .quick-add-modal__quantity {
    display: flex;
    align-items: center;
    border: 1px solid var(--color-border, #e5e7eb);
    border-radius: 10px;
    overflow: hidden;
  }

  .quick-add-modal__qty-btn {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: none;
    border: none;
    cursor: pointer;
    color: var(--color-foreground, #1a1a1a);
    font-size: 1.2rem;
    transition: background 0.15s;
  }

  .quick-add-modal__qty-btn:hover {
    background: rgba(0, 0, 0, 0.04);
  }

  .quick-add-modal__qty-input {
    width: 48px;
    height: 40px;
    text-align: center;
    border: none;
    border-inline-start: 1px solid var(--color-border, #e5e7eb);
    border-inline-end: 1px solid var(--color-border, #e5e7eb);
    background: none;
    font-size: 0.95rem;
    font-weight: 600;
    color: var(--color-foreground, #1a1a1a);
    -moz-appearance: textfield;
  }

  .quick-add-modal__qty-input::-webkit-outer-spin-button,
  .quick-add-modal__qty-input::-webkit-inner-spin-button {
    -webkit-appearance: none;
    margin: 0;
  }

  .quick-add-modal__unavailable {
    text-align: center;
    padding: 12px;
    font-size: 0.875rem;
    color: var(--color-error, #dc2626);
    font-weight: 500;
    display: none;
  }

  .quick-add-modal__footer button[type='submit'] {
    width: 100%;
    height: 56px;
  }

  .quick-add-modal__footer button[type='submit'] svg {
    width: 20px;
    height: 20px;
    flex-shrink: 0;
  }

  .quick-add-modal__footer button[type='submit']:hover:not(:disabled) {
    opacity: 0.9;
    transform: translateY(-1px);
  }

  .quick-add-modal__footer button[type='submit']:active:not(:disabled) {
    transform: translateY(0);
  }

  .quick-add-modal__footer button[type='submit']:disabled {
    opacity: 0.5;
    cursor: not-allowed;
    transform: none;
  }

  .quick-add-modal__footer button[type='submit'].is-loading {
    pointer-events: none;
  }

  .quick-add-modal__footer button[type='submit'].is-loading svg,
  .quick-add-modal__footer button[type='submit'].is-loading [data-add-to-cart-text] {
    visibility: hidden;
  }

  .quick-add-modal__footer button[type='submit'].is-loading::after {
    content: '';
    position: absolute;
    width: 22px;
    height: 22px;
    border: 2.5px solid rgba(255, 255, 255, 0.3);
    border-top-color: #fff;
    border-radius: 50%;
    animation: quickAddSpin 0.6s linear infinite;
  }

  @keyframes quickAddSpin {
    to {
      transform: rotate(360deg);
    }
  }

  @media (max-width: 767px) {
    .quick-add-modal__footer button[type='submit'] {
      height: 48px;
      font-size: 15px;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .quick-add-modal__content,
    .quick-add-modal__option-btn,
    .quick-add-modal__color-btn {
      animation: none;
      transition: none;
    }
  }
</style>

{%- capture section_dir -%}{%- render 'section-dir' -%}{%- endcapture -%}
<div
  id="quick-add-modal"
  class="quick-add-modal"
  dir="{{ section_dir }}"
  role="dialog"
  aria-modal="true"
  aria-label="{{ 'products.product.add_to_cart' | t | default: 'إضافة للسلة' }}"
>
  <div class="quick-add-modal__overlay" data-quick-add-close></div>

  <div class="quick-add-modal__content">
    <button
      type="button"
      class="quick-add-modal__close"
      data-quick-add-close
      aria-label="{{ 'accessibility.close' | t | default: 'إغلاق' }}"
    >
      <svg
        width="18"
        height="18"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2.5"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <line x1="18" y1="6" x2="6" y2="18"></line>
        <line x1="6" y1="6" x2="18" y2="18"></line>
      </svg>
    </button>

    <div class="quick-add-modal__body">
      {%- comment -%} Loading State {%- endcomment -%}
      <div data-quick-add-loading class="flex items-center justify-center py-16">
        <div
          class="quick-add-modal__spinner"
          style="width:32px;height:32px;border-color:rgba(0,0,0,0.1);border-top-color:var(--color-primary,#1a2744);"
        ></div>
      </div>

      {%- comment -%} Product Content (populated by JS) {%- endcomment -%}
      <div data-quick-add-content class="hidden">
        <div class="quick-add-modal__header">
          <img
            data-quick-add-image
            class="quick-add-modal__product-image"
            src=""
            alt=""
            width="80"
            height="80"
            loading="lazy"
          >
          <div class="quick-add-modal__product-info">
            <h3 data-quick-add-title class="quick-add-modal__product-title"></h3>
            <div class="quick-add-modal__product-price">
              <span data-quick-add-price class="quick-add-modal__price-current"></span>
              <span data-quick-add-compare-price class="quick-add-modal__price-compare hidden"></span>
            </div>
          </div>
        </div>

        <div data-quick-add-options class="quick-add-modal__options"></div>

        <div class="quick-add-modal__footer">
          <div class="quick-add-modal__quantity-row">
            <span class="quick-add-modal__quantity-label">
              {{- 'products.product.quantity.label' | t | default: 'الكمية' -}}
            </span>
            <div class="quick-add-modal__quantity">
              <button
                type="button"
                class="quick-add-modal__qty-btn"
                data-quick-add-qty-minus
                aria-label="{{ 'products.product.quantity.decrease' | t | default: 'تقليل' }}"
              >
                −
              </button>
              <input
                type="number"
                class="quick-add-modal__qty-input"
                data-quick-add-qty-input
                value="1"
                min="1"
                max="99"
                aria-label="{{ 'products.product.quantity.label' | t | default: 'الكمية' }}"
              >
              <button
                type="button"
                class="quick-add-modal__qty-btn"
                data-quick-add-qty-plus
                aria-label="{{ 'products.product.quantity.increase' | t | default: 'زيادة' }}"
              >
                +
              </button>
            </div>
          </div>

          <div data-quick-add-unavailable class="quick-add-modal__unavailable">
            {{ 'products.product.unavailable' | t | default: 'هذا الخيار غير متوفر حالياً' }}
          </div>

          <button
            type="submit"
            class="btn--primary btn--full"
            data-quick-add-submit
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <circle cx="9" cy="21" r="1"></circle>
              <circle cx="20" cy="21" r="1"></circle>
              <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
            </svg>
            <span data-add-to-cart-text>
              {{- 'products.product.add_to_cart' | t | default: 'إضافة للسلة' -}}
            </span>
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
