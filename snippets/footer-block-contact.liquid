{%- comment -%}
  Footer Block - Contact Info
  Displays contact information with icons

  Parameters:
  - block: The block object from section
{%- endcomment -%}

<div class="footer-block footer-block--contact text-right" {{ block.shopify_attributes }}>
  {%- if block.settings.heading != blank -%}
    <h3 class="text-base sm:text-lg font-bold mb-4 sm:mb-6">
      {{ block.settings.heading }}
    </h3>
  {%- endif -%}
  
  <ul class="space-y-3 sm:space-y-4">
    {%- if block.settings.mobile != blank -%}
      <li class="flex items-center justify-end gap-2 sm:gap-3">
        <a href="tel:{{ block.settings.mobile }}" class="text-gray-400 text-xs sm:text-sm hover:text-white transition-colors">
          {{ block.settings.mobile }}
        </a>
        <div class="w-7 h-7 sm:w-8 sm:h-8 rounded-full border border-gray-600 flex items-center justify-center transition-all duration-300 hover:bg-white/15 hover:scale-110 cursor-pointer">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-3.5 h-3.5 sm:w-4 sm:h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />
          </svg>
        </div>
      </li>
    {%- endif -%}

    {%- if block.settings.phone != blank -%}
      <li class="flex items-center justify-end gap-2 sm:gap-3">
        <a href="tel:{{ block.settings.phone }}" class="text-gray-400 text-xs sm:text-sm hover:text-white transition-colors">
          {{ block.settings.phone }}
        </a>
        <div class="w-7 h-7 sm:w-8 sm:h-8 rounded-full border border-gray-600 flex items-center justify-center transition-all duration-300 hover:bg-white/15 hover:scale-110 cursor-pointer">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-3.5 h-3.5 sm:w-4 sm:h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
        </div>
      </li>
    {%- endif -%}

    {%- if block.settings.email != blank -%}
      <li class="flex items-center justify-end gap-2 sm:gap-3">
        <a href="mailto:{{ block.settings.email }}" class="text-gray-400 text-xs sm:text-sm hover:text-white transition-colors">
          {{ block.settings.email }}
        </a>
        <div class="w-7 h-7 sm:w-8 sm:h-8 rounded-full border border-gray-600 flex items-center justify-center transition-all duration-300 hover:bg-white/15 hover:scale-110 cursor-pointer">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-3.5 h-3.5 sm:w-4 sm:h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
        </div>
      </li>
    {%- endif -%}

    {%- if block.settings.telegram != blank -%}
      <li class="flex items-center justify-end gap-2 sm:gap-3">
        <a href="https://t.me/{{ block.settings.telegram }}" target="_blank" rel="noopener noreferrer" class="text-gray-400 text-xs sm:text-sm hover:text-white transition-colors">
          {{ block.settings.telegram }}
        </a>
        <div class="w-7 h-7 sm:w-8 sm:h-8 rounded-full border border-gray-600 flex items-center justify-center transition-all duration-300 hover:bg-white/15 hover:scale-110 cursor-pointer">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-3.5 h-3.5 sm:w-4 sm:h-4" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm4.64 6.8c-.15 1.58-.8 5.42-1.13 7.19-.14.75-.42 1-.68 1.03-.58.05-1.02-.38-1.58-.75-.88-.58-1.38-.94-2.23-1.5-.99-.65-.35-1.01.22-1.59.15-.15 2.71-2.48 2.76-2.69a.2.2 0 00-.05-.18c-.06-.05-.14-.03-.21-.02-.09.02-1.49.95-4.22 2.79-.4.27-.76.41-1.08.4-.36-.01-1.04-.2-1.55-.37-.63-.2-1.12-.31-1.08-.66.02-.18.27-.36.74-.55 2.92-1.27 4.86-2.11 5.83-2.51 2.78-1.16 3.35-1.36 3.73-1.36.08 0 .27.02.39.12.1.08.13.19.14.27-.01.06.01.24 0 .38z"/>
          </svg>
        </div>
      </li>
    {%- endif -%}
  </ul>
  
  {%- if block.settings.show_social_icons -%}
    {% render 'footer-social-icons' %}
  {%- endif -%}
</div>

