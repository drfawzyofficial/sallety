{%- comment -%}
  Testimonial Card Content Snippet
  Renders the inner content of a testimonial card
  
  Usage: {% render 'testimonial-card-content', block: block %}
{%- endcomment -%}

<!-- Card Decorative Elements -->
<div class="card-decoration" aria-hidden="true">
  <!-- Quote Icon -->
  <svg class="quote-icon" viewBox="0 0 24 24" fill="currentColor">
    <path d="M4.583 17.321C3.553 16.227 3 15 3 13.011c0-3.5 2.457-6.637 6.03-8.188l.893 1.378c-3.335 1.804-3.987 4.145-4.247 5.621.537-.278 1.24-.375 1.929-.311 1.804.167 3.226 1.648 3.226 3.489a3.5 3.5 0 01-3.5 3.5c-1.073 0-2.099-.49-2.748-1.179zm10 0C13.553 16.227 13 15 13 13.011c0-3.5 2.457-6.637 6.03-8.188l.893 1.378c-3.335 1.804-3.987 4.145-4.247 5.621.537-.278 1.24-.375 1.929-.311 1.804.167 3.226 1.648 3.226 3.489a3.5 3.5 0 01-3.5 3.5c-1.073 0-2.099-.49-2.748-1.179z"/>
  </svg>
  <!-- Corner Accent -->
  <div class="corner-accent"></div>
  <!-- Gradient Overlay -->
  <div class="card-gradient"></div>
  <!-- Shine Effect -->
  <div class="card-shine"></div>
</div>

<!-- Card Content -->
<div class="relative z-10">
  <!-- Header: Avatar + Name + Stars (RTL) -->
  <div class="flex items-center gap-3 sm:gap-4 mb-4 sm:mb-5 flex-row-reverse">
    <!-- Avatar -->
    <div class="w-12 h-12 sm:w-14 sm:h-14 lg:w-[60px] lg:h-[60px] rounded-full overflow-hidden flex-shrink-0 bg-slate-200">
      {%- if block.settings.customer_image != blank -%}
        <img 
          src="{{ block.settings.customer_image | image_url: width: 120 }}" 
          alt="{{ block.settings.customer_name }}"
          width="60"
          height="60"
          loading="lazy"
          class="w-full h-full object-cover"
        >
      {%- else -%}
        <svg viewBox="0 0 60 60" fill="none" xmlns="http://www.w3.org/2000/svg" class="w-full h-full">
          <circle cx="30" cy="30" r="30" fill="#e2e8f0"/>
          <circle cx="30" cy="22" r="10" fill="#94a3b8"/>
          <path d="M10 55c0-11.046 8.954-20 20-20s20 8.954 20 20" fill="#94a3b8"/>
        </svg>
      {%- endif -%}
    </div>
    
    <!-- Name + Rating -->
    <div class="flex-1 text-right">
      <h3 class="testimonial-name m-0 mb-1.5 sm:mb-2 leading-tight"
          style="color: var(--testimonials-name-color); font-weight: var(--testimonials-name-weight);">
        {{ block.settings.customer_name }}
      </h3>
      
      <!-- Star Rating -->
      <div class="flex gap-0.5 justify-end flex-row-reverse">
        {%- assign rating = block.settings.rating | default: 5 -%}
        {%- for i in (1..5) -%}
          {%- if i <= rating -%}
            <svg class="w-3.5 h-3.5 sm:w-4 sm:h-4" viewBox="0 0 20 20" fill="currentColor" style="color: var(--testimonials-star-color);">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
            </svg>
          {%- else -%}
            <svg class="w-3.5 h-3.5 sm:w-4 sm:h-4 text-gray-600" viewBox="0 0 20 20" fill="currentColor">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
            </svg>
          {%- endif -%}
        {%- endfor -%}
      </div>
    </div>
  </div>
  
  <!-- Review Text -->
  <p class="testimonial-text m-0 text-right leading-relaxed sm:leading-[1.8]"
     style="color: var(--testimonials-text-color); font-weight: var(--testimonials-body-weight);">
    {{ block.settings.review_text }}
  </p>
</div>

