{%- comment -%}
  Footer App Download Component
  Displays App Store and Google Play download buttons

  Parameters:
  - heading: Section heading text
  - app_store_link: App Store URL
  - google_play_link: Google Play Store URL
{%- endcomment -%}

<div class="footer-app-download text-right">
  {%- if heading != blank -%}
    <h3 class="text-base sm:text-lg font-bold mb-4 sm:mb-6">{{ heading }}</h3>
  {%- endif -%}
  
  <div class="flex flex-col gap-3">
    {%- if app_store_link != blank -%}
      <!-- App Store -->
      <a href="{{ app_store_link }}" target="_blank" rel="noopener noreferrer" class="inline-block transition-transform hover:scale-105">
        <div class="bg-black rounded-lg px-3 sm:px-4 py-2 flex items-center gap-2 sm:gap-3 border border-gray-700">
          <div class="text-right">
            <p class="text-[8px] sm:text-[10px] text-gray-400">Download on the</p>
            <p class="text-xs sm:text-sm font-semibold">App Store</p>
          </div>
          <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 sm:w-7 sm:h-7" viewBox="0 0 24 24" fill="currentColor">
            <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/>
          </svg>
        </div>
      </a>
    {%- endif -%}

    {%- if google_play_link != blank -%}
      <!-- Google Play -->
      <a href="{{ google_play_link }}" target="_blank" rel="noopener noreferrer" class="inline-block transition-transform hover:scale-105">
        <div class="bg-black rounded-lg px-3 sm:px-4 py-2 flex items-center gap-2 sm:gap-3 border border-gray-700">
          <div class="text-right">
            <p class="text-[8px] sm:text-[10px] text-gray-400">GET IT ON</p>
            <p class="text-xs sm:text-sm font-semibold">Google Play</p>
          </div>
          <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 sm:w-7 sm:h-7" viewBox="0 0 24 24">
            <path fill="#4285F4" d="M22.018 13.298l-3.919 2.218-3.515-3.493 3.543-3.521 3.891 2.202a1.49 1.49 0 0 1 0 2.594z"/>
            <path fill="#34A853" d="M1.337.924a1.486 1.486 0 0 0-.112.568v21.017c0 .217.045.419.124.6l11.155-11.087L1.337.924z"/>
            <path fill="#FBBC04" d="M12.504 12.022l3.086-3.086L3.196.258A1.5 1.5 0 0 0 1.337.924l11.167 11.098z"/>
            <path fill="#EA4335" d="M12.504 12.022L1.349 23.109c.195.177.454.291.747.291.213 0 .438-.056.652-.169l12.392-7.015-2.636-2.194z"/>
          </svg>
        </div>
      </a>
    {%- endif -%}
  </div>
</div>
